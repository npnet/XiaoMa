<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/item_music_rec_rv_width"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.xiaoma.ui.view.ReflectionImageView
            android:id="@+id/iv_music_rec_rv_album"
            android:layout_width="@dimen/item_music_rec_rv_album_width"
            android:layout_height="@dimen/item_music_rec_rv_album_height"
            android:scaleType="fitXY"
            app:reflectionHeight="62px"
            app:reflectionPadding="10px" />

        <ImageView
            android:layout_width="@dimen/item_music_rec_rv_album_width"
            android:layout_height="@dimen/item_music_rec_rv_album_width"
            android:scaleType="fitStart"
            android:src="@drawable/pic_light_album_big" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_music_rec_rv_song"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_music_rec_rv_song_margin_top"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="@dimen/item_music_rec_rv_song_text_size" />

    <TextView
        android:id="@+id/tv_music_rec_rv_singer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_music_rec_rv_singer_margin_top"
        android:gravity="center_horizontal"
        android:textColor="@color/white_60"
        android:textSize="@dimen/item_music_rec_rv_singer_text_size" />
</LinearLayout>
