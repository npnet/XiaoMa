<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
    <ImageView
        android:id="@id/iv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/state_error" />
    <TextView
        android:id="@id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58px"
        android:text="@string/state_view_loading_error_text"
        android:textColor="@color/state_view_text_color"
        android:textSize="30px" />

    <Button
        android:id="@id/tv_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58px"
        android:background="@drawable/selector_button"
        android:textColor="@color/selector_button_text_color"
        android:textSize="@dimen/font_button_text"
        android:text="@string/state_view_retry_text" />
</LinearLayout>