<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="PxUsage,ContentDescription">

    <RelativeLayout
        android:id="@+id/rl_vp"
        android:layout_width="654px"
        android:layout_height="450px"
        android:layout_gravity="center"
        android:background="@drawable/bg_dialog_big">

        <ImageView
            android:id="@+id/iv_dialog_anim2"
            android:layout_width="230px"
            android:layout_height="230px"
            android:layout_centerInParent="true"
            android:background="@drawable/music_anime"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_centerInParent="true"
            android:layout_marginStart="20px"
            android:layout_marginEnd="20px"
            android:src="@drawable/icon_mic2" />

        <Button
            android:id="@+id/btn_sure"
            android:layout_width="186px"
            android:layout_height="80px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10px"
            android:background="@drawable/btn_selector"
            android:paddingBottom="10px"
            android:text="@string/pickerview_submit"
            android:textColor="@color/white"
            android:textSize="30px" />
    </RelativeLayout>
</FrameLayout>