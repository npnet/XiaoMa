<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="PopAnimTranslate">
        <item name="android:windowEnterAnimation">@anim/translate_in</item>
        <item name="android:windowExitAnimation">@anim/translate_out</item>
    </style>


    <style name="manual_switch_light_blue">
        <item name="android:shadowRadius">20</item>
        <item name="android:shadowColor">@color/color_shadow_checked</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:textColor">@color/selector_text_check</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="manual_switch_normal_gray">
        <item name="android:shadowRadius">0</item>
        <item name="android:shadowColor">@color/color_home_menus_unchecked</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowDx">0</item>
        <item name="android:textColor">@color/selector_text_check</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="setting_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">100px</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">30px</item>
    </style>

    <style name="setting_toggle">
        <item name="android:layout_width">100px</item>
        <item name="android:layout_height">100px</item>
        <item name="android:background">@drawable/toggle_selector</item>
        <item name="android:textOff">@null</item>
        <item name="android:textOn">@null</item>
    </style>


</resources>
