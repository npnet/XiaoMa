<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="115px"
        android:layout_marginTop="106px"
        android:textColor="@color/white"
        android:textSize="30px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="技能1" />

    <ImageView
        android:id="@+id/view_bg"
        android:layout_width="1422px"
        android:layout_height="466px"
        android:layout_marginStart="223px"
        android:layout_marginTop="110px"
        android:background="@drawable/bg_item_skill"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="200px"
        android:layout_height="80px"
        android:layout_marginEnd="48px"
        android:layout_marginBottom="40px"
        android:background="@drawable/btn_selector"
        android:paddingBottom="10px"
        android:text="@string/edit"
        android:textSize="28px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_del"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_del"
        android:layout_width="200px"
        android:layout_height="80px"
        android:background="@drawable/btn_selector"
        android:paddingBottom="10px"
        android:text="@string/del"
        android:textSize="28px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_edit"
        app:layout_constraintTop_toTopOf="@id/btn_edit" />

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="130px"
        android:layout_height="130px"
        android:layout_marginStart="1471px"
        android:layout_marginTop="139px"
        android:padding="13px"
        android:background="@drawable/icon_head"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_voice"
        android:layout_width="441px"
        android:layout_height="66px"
        android:layout_marginStart="1002px"
        android:layout_marginTop="170px"
        android:background="@drawable/bg_speak_right"
        android:ellipsize="end"
        android:gravity="right|center_vertical"
        android:maxLines="1"
        android:paddingStart="50px"
        android:paddingEnd="50px"
        android:textColor="#edf6fe"
        android:textSize="30px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="我要去逛街我要去逛街我要去逛街我要去逛街" />

    <ImageView
        android:id="@+id/iv_yomi"
        android:layout_width="130px"
        android:layout_height="130px"
        android:layout_marginStart="270px"
        android:layout_marginTop="250px"
        android:src="@drawable/icon_speak"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_actions"
        android:layout_width="861px"
        android:layout_height="275px"
        android:layout_marginStart="417px"
        android:layout_marginTop="268px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>