<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="511px"
    android:layout_height="match_parent"
    android:paddingStart="115px">

    <View
        android:id="@+id/view_bg"
        android:layout_width="396px"
        android:layout_height="396px"
        android:background="@drawable/bg_item_skill"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="180px"
        android:layout_height="wrap_content"
        android:layout_marginTop="15px"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="#626b7e"
        android:textSize="28px"
        app:layout_constraintEnd_toEndOf="@+id/view_bg"
        app:layout_constraintStart_toStartOf="@+id/view_bg"
        app:layout_constraintTop_toTopOf="@+id/view_bg"
        tools:text="技能一" />

    <TextView
        android:id="@+id/tv_voice"
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:layout_marginTop="90px"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:textColor="#ffffff"
        android:textSize="30px"
        app:layout_constraintEnd_toEndOf="@+id/view_bg"
        app:layout_constraintStart_toStartOf="@+id/view_bg"
        app:layout_constraintTop_toTopOf="@+id/view_bg"
        tools:text="我要去逛街我要去逛街我要去逛街我要去逛街我要去逛街" />

    <ImageView
        android:id="@+id/iv_action1"
        android:layout_width="99px"
        android:layout_height="99px"
        android:layout_marginTop="200px"
        android:padding="22px"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/view_bg"
        app:layout_constraintTop_toTopOf="@id/view_bg" />

    <ImageView
        android:id="@+id/iv_action2"
        android:layout_width="99px"
        android:layout_height="99px"
        android:padding="22px"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/iv_action1"
        app:layout_constraintTop_toTopOf="@id/iv_action1" />

    <ImageView
        android:id="@+id/iv_action3"
        android:layout_width="99px"
        android:layout_height="99px"
        android:padding="22px"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/iv_action2"
        app:layout_constraintTop_toTopOf="@id/iv_action1" />

    <ImageView
        android:id="@+id/iv_action4"
        android:layout_width="99px"
        android:layout_height="99px"
        android:padding="22px"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/iv_action3"
        app:layout_constraintTop_toTopOf="@id/iv_action1" />

    <ImageView
        android:id="@+id/iv_action5"
        android:layout_width="99px"
        android:layout_height="99px"
        android:padding="22px"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/view_bg"
        app:layout_constraintTop_toBottomOf="@id/iv_action1" />

    <ImageView
        android:id="@+id/iv_action6"
        android:layout_width="99px"
        android:layout_height="99px"
        android:padding="22px"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/iv_action5"
        app:layout_constraintTop_toBottomOf="@id/iv_action1" />

    <ImageView
        android:id="@+id/iv_action7"
        android:layout_width="99px"
        android:layout_height="99px"
        android:padding="22px"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/iv_action6"
        app:layout_constraintTop_toBottomOf="@id/iv_action1" />

    <ImageView
        android:id="@+id/iv_action8"
        android:layout_width="99px"
        android:layout_height="99px"
        android:padding="22px"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/iv_action7"
        app:layout_constraintTop_toBottomOf="@id/iv_action1" />

    <ImageView
        android:id="@+id/iv_action9"
        android:layout_width="99px"
        android:layout_height="99px"
        android:padding="22px"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/view_bg"
        app:layout_constraintTop_toBottomOf="@id/iv_action5" />

</android.support.constraint.ConstraintLayout>