<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.ui.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="61px"
        android:layout_marginTop="98px"
        android:text="@string/bent_smart_home"
        android:textColor="@color/white"
        android:textSize="30px" />

    <ImageView
        android:id="@+id/iv_cloudmi"
        android:layout_width="186px"
        android:layout_height="260px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250px"
        android:src="@drawable/icon_cloudmi" />

    <ImageView
        android:id="@+id/iv_xiaobai"
        android:layout_width="186px"
        android:layout_height="250px"
        android:layout_alignTop="@id/iv_cloudmi"
        android:layout_marginEnd="286px"
        android:layout_toLeftOf="@id/iv_cloudmi"
        android:src="@drawable/icon_white" />

    <ImageView
        android:id="@+id/iv_xiaomi"
        android:layout_width="186px"
        android:layout_height="250px"
        android:layout_alignTop="@id/iv_cloudmi"
        android:layout_marginStart="286px"
        android:layout_toRightOf="@id/iv_cloudmi"
        android:src="@drawable/icon_mi" />

    <TextView
        android:id="@+id/tv_cloudmi"
        android:layout_width="186px"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_cloudmi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6px"
        android:gravity="center"
        android:text="@string/cloud_mi"
        android:textColor="@color/white"
        android:textSize="32px" />

    <TextView
        android:id="@+id/tv_xiaobai"
        android:layout_width="186px"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_xiaobai"
        android:layout_marginTop="6px"
        android:layout_marginEnd="286px"
        android:layout_toLeftOf="@id/iv_cloudmi"
        android:gravity="center"
        android:text="@string/xiaobai"
        android:textColor="@color/white"
        android:textSize="32px" />

    <TextView
        android:id="@+id/tv_xiaomi"
        android:layout_width="186px"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_xiaomi"
        android:layout_marginStart="286px"
        android:layout_marginTop="6px"
        android:layout_toRightOf="@id/iv_cloudmi"
        android:gravity="center"
        android:text="@string/xiaomi"
        android:textColor="@color/white"
        android:textSize="32px" />

    <FrameLayout
        android:id="@+id/container_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>