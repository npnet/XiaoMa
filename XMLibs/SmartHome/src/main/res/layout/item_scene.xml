<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="346px"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/iv_scene"
        android:layout_width="256px"
        android:layout_height="256px"
        android:layout_centerHorizontal="true"/>


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_scene"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50px"
        android:ellipsize="end"
        android:maxWidth="200px"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="30px"
        tools:text="回家" />

    <ImageView
        android:id="@+id/iv_scene_logo"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_alignTop="@+id/iv_scene"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="103px"
        android:src="@drawable/icon_scene_default" />

    <Button
        android:id="@+id/btn_excute"
        android:layout_width="226px"
        android:layout_height="80px"
        android:layout_below="@+id/iv_scene"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40px"
        android:background="@drawable/btn_selector"
        android:paddingBottom="10px"
        android:text="@string/excute"
        android:textColor="@color/white"
        android:textSize="22px" />


</RelativeLayout>