<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="346px"
    android:layout_height="wrap_content"
    android:gravity="center">

    <ImageView
        android:id="@+id/iv_scene"
        android:layout_width="256px"
        android:layout_height="256px"
        android:layout_centerHorizontal="true"
        android:background="@drawable/icon_scene_default" />


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="24px"
        android:layout_alignBottom="@+id/iv_scene"
        android:layout_marginBottom="36px"
        tools:text="回家" />

    <Button
        android:id="@+id/btn_excute"
        android:layout_width="230px"
        android:layout_height="80px"
        android:layout_below="@+id/iv_scene"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40px"
        android:background="@drawable/btn_selector"
        android:enabled="false"
        android:paddingBottom="10px"
        android:text="@string/order_setting"
        android:textColor="@color/white"
        android:textSize="22px"
        android:visibility="gone" />
</RelativeLayout>