<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="810px"
    android:layout_height="match_parent"
    android:background="@drawable/bg_cloudmi_login">

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="195px"
        android:text="@string/scan_code_login_cloudmi"
        android:textColor="@color/white"
        android:textSize="30px" />

    <ImageView
        android:id="@+id/iv_login_code"
        android:layout_width="275px"
        android:layout_height="275px"
        android:layout_below="@+id/tv_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50px"/>

    <View
        android:layout_width="127px"
        android:background="@drawable/navi_bg_left"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="50px"
        android:layout_height="50px"
        android:layout_centerVertical="true"
        android:layout_marginStart="40px"
        android:src="@drawable/icon_back" />


</RelativeLayout>