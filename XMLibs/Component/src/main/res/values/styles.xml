<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="XiaoMaTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_common</item>
        <item name="android:windowAnimationStyle">@style/XiaomaTheme_Animation_Activity</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:selectableItemBackground">@null</item>
        <item name="android:selectableItemBackgroundBorderless">@null</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:longClickable">false</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <style name="XiaoMaTheme.FullScreen" parent="@style/XiaoMaTheme">
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="XiaoMaTheme_Main" parent="@style/XiaoMaTheme">
