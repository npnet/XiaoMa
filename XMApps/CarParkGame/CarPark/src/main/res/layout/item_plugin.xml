<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/item_plugin_width"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_plugin_height"
        android:background="@drawable/selector_item_card_bg">

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_plugin_img_height"
            android:layout_marginLeft="1px"
            android:layout_marginTop="1px"
            android:layout_marginRight="1px"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_icon_text"
            android:layout_width="76px"
            android:layout_height="32px"
            android:background="@color/item_icon_text_bg_color"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20px"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/item_plugin_count_margin_bottom"
            android:gravity="center"
            android:textColor="@color/item_count_text_color"
            android:textSize="@dimen/item_plugin_count_size" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_plugin_name_margin_top"
        android:textColor="@color/white"
        android:textSize="@dimen/item_plugin_name_size" />

</LinearLayout>