<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sort_item_view"
    android:layout_width="674px"
    android:layout_height="102px"
    android:layout_marginRight="20px"
    android:layout_marginBottom="50px"
    android:background="@drawable/item_sort_selector"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_head_color"
        android:layout_width="6px"
        android:layout_height="match_parent"
        android:background="#5db1ff" />

    <ImageView
        android:id="@+id/iv_user_head"
        android:layout_width="120px"
        android:layout_height="102px"
        android:layout_marginRight="64px"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_rank_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="74px"
        android:textColor="#d8d8d8"
        android:textSize="30px" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="56px"
        android:layout_weight="1"
        android:drawableRight="@drawable/sn_woman"
        android:drawablePadding="14px"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#d8d8d8"
        android:textSize="30px" />

    <TextView
        android:id="@+id/tv_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="60px"
        android:textColor="#66a1a7b3"
        android:textSize="30px" />
</LinearLayout>