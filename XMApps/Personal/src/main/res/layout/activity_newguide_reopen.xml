<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_53"
        android:layout_marginTop="@dimen/px_98"
        android:text="@string/item_new_guider"
        android:textColor="@color/white"
        android:textSize="@dimen/px_36"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_apps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_53"
        android:layout_marginTop="@dimen/px_120"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <com.xiaoma.ui.view.XmScrollBar
        android:id="@+id/xsb_scrollbar"
        android:layout_width="@dimen/px_487"
        android:layout_height="@dimen/px_10"
        android:layout_marginBottom="@dimen/px_73"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>