<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/et_input_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_dialog_personal_name_edit"
        android:layout_marginStart="@dimen/size_dialog_personal_name_left"
        android:layout_marginEnd="@dimen/size_dialog_personal_name_left"
        android:background="@drawable/bg_edit_text"
        android:hint="@string/personal_name"
        android:paddingLeft="@dimen/size_dialog_personal_name_edit_left"
        android:textColor="#b3000000"
        android:singleLine="true"
        android:maxLength="6"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="@dimen/font_size_30px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>