<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/order_detail_info_layout"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/height_order_detail_info">

    <RelativeLayout
        android:id="@+id/rl_info_first"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="@dimen/size_order_detail_info_divider_line"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:visibility="gone" />


        <TextView
            android:id="@+id/tv_info_first_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_order_info_content_margin"
            android:text="预定房间"
            android:textSize="@dimen/font_mine_order_size_24px" />

        <TextView
            android:id="@+id/tv_info_first_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_info_first_title"
            android:layout_marginTop="@dimen/size_order_detail_info_margin_vertical"
            android:text="6间"
            android:textSize="@dimen/font_mine_order_size_28px" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_info_second"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/size_order_detail_info_margin_horizontal"
        android:gravity="center_vertical"
        app:layout_constraintStart_toEndOf="@id/rl_info_first"
        app:layout_constraintTop_toTopOf="parent">


        <View
            android:id="@+id/rl_info_second_bg"
            android:layout_width="@dimen/size_order_detail_info_divider_line"
            android:layout_height="match_parent"
            android:background="@android:color/white" />


        <TextView
            android:id="@+id/tv_info_second_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_order_detail_info_margin_horizontal"
            android:layout_marginTop="@dimen/size_order_info_content_margin"
            android:layout_toEndOf="@id/rl_info_second_bg"
            android:text="入住-退房日期"
            android:textSize="@dimen/font_mine_order_size_24px" />

        <TextView
            android:id="@+id/tv_info_second_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_info_second_title"
            android:layout_alignStart="@id/tv_info_second_title"
            android:layout_marginTop="@dimen/size_order_detail_info_margin_vertical"
            android:text="12月1日-12月2日"
            android:textSize="@dimen/font_mine_order_size_28px" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_info_third"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/size_order_detail_info_margin_horizontal"
        android:gravity="center_vertical"
        app:layout_constraintStart_toEndOf="@id/rl_info_second"
        app:layout_constraintTop_toTopOf="parent">


        <View
            android:layout_width="@dimen/size_order_detail_info_divider_line"
            android:layout_height="match_parent"
            android:background="@android:color/white" />


        <TextView
            android:id="@+id/tv_info_third_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_order_detail_info_margin_horizontal"
            android:layout_marginTop="@dimen/size_order_info_content_margin"
            android:text="扫码支付后"
            android:textSize="@dimen/font_mine_order_size_24px" />

        <TextView
            android:id="@+id/tv_info_third_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_info_third_title"
            android:layout_alignStart="@id/tv_info_third_title"
            android:layout_marginTop="@dimen/size_order_detail_info_margin_vertical"
            android:text="2日 6:00前都可取消预定"
            android:textSize="@dimen/font_mine_order_size_28px" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_info_fourth"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/size_order_detail_info_margin_horizontal"
        android:gravity="center_vertical"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/rl_info_third"
        app:layout_constraintTop_toTopOf="parent">


        <View
            android:layout_width="@dimen/size_order_detail_info_divider_line"
            android:layout_height="match_parent"
            android:background="@android:color/white" />


        <TextView
            android:id="@+id/tv_info_fourth_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_order_detail_info_margin_horizontal"
            android:layout_marginTop="@dimen/size_order_info_content_margin"
            android:textSize="@dimen/font_mine_order_size_24px" />

        <TextView
            android:id="@+id/tv_info_fourth_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_info_fourth_title"
            android:layout_alignStart="@id/tv_info_fourth_title"
            android:layout_marginTop="@dimen/size_order_detail_info_margin_vertical"
            android:textSize="@dimen/font_mine_order_size_28px" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>