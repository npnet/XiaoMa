<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg_middle">

    <TextView
        android:id="@+id/tv_order_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_order_dialog_title_top"
        android:text="@string/order_dialog_prompt"
        android:textSize="@dimen/font_mine_order_size_28px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cancel_order_content_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_order_dialog_content_top"
        android:text="确认取消订单？"
        android:textSize="@dimen/font_mine_order_size_32px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_order_dialog_title" />


    <TextView
        android:id="@+id/cancel_order_content_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_order_dialog_content_margin"
        android:text="取消预订后，预订金额会返回原账户"
        android:textSize="@dimen/font_mine_order_size_32px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cancel_order_content_first" />


    <TextView
        android:id="@+id/cancel_predestine_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="165px"
        android:text="@string/cancel_predestine"
        android:textColor="@drawable/selector_bg_button"
        android:textSize="@dimen/font_mine_order_size_30px"
        app:layout_constraintEnd_toStartOf="@id/confirm_predestine_order"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cancel_order_content_second" />

    <TextView
        android:id="@+id/confirm_predestine_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="165px"
        android:text="算了"
        android:textColor="@drawable/selector_bg_button"
        android:textSize="@dimen/font_mine_order_size_30px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cancel_predestine_order"
        app:layout_constraintTop_toBottomOf="@id/cancel_order_content_second" />

</android.support.constraint.ConstraintLayout>