<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_service_bg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/bg_guide_one"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_80"
        android:layout_marginTop="@dimen/px_99"
        android:src="@drawable/icon_car_guide"
        app:layout_constraintLeft_toLeftOf="@+id/iv_service_bg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_12"
        android:text="@string/car_service"
        android:textColor="@color/color_edf6fe"
        android:textSize="@dimen/px_32"
        app:layout_constraintBottom_toBottomOf="@+id/iv_car"
        app:layout_constraintLeft_toRightOf="@+id/iv_car"
        app:layout_constraintTop_toTopOf="@+id/iv_car" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_42"
        android:text="@string/car_service_text"
        android:textColor="@color/color_8a919d"
        android:textSize="@dimen/px_28"
        app:layout_constraintLeft_toLeftOf="@+id/iv_car"
        app:layout_constraintTop_toBottomOf="@+id/iv_car" />

    <TextView
        android:id="@+id/tv_guide_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_79"
        android:layout_marginBottom="@dimen/px_60"
        android:background="@drawable/selector_guide_skip"
        android:gravity="center"
        android:paddingBottom="@dimen/px_18"
        android:text="@string/guide_skip"
        android:textColor="@color/color_edf6fe"
        android:textSize="@dimen/px_28"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/iv_service_bg" />

    <ImageView
        android:id="@+id/iv_wave_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:src="@drawable/bg_guide_wave_main_hexagon_one"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_wave_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:src="@drawable/bg_guide_wave_main_hexagon_two"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_wave_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:src="@drawable/bg_guide_wave_main_hexagon_three"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_gesture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:src="@drawable/icon_guide_hand_one"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>