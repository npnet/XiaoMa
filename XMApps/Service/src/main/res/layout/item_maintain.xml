<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/maintain_layout">
<LinearLayout
    android:layout_width="@dimen/item_maintain_width"
    android:layout_height="@dimen/item_maintain_height"
    android:background="@drawable/selector_frame">
    <ImageView
        android:id="@+id/icon_maintain"
        android:src="@drawable/maintain_item_img"
        android:layout_width="@dimen/item_image_width"
        android:layout_height="@dimen/item_image_height"
        android:layout_marginTop="@dimen/item_image_top"
        android:layout_marginLeft="@dimen/item_image_margin_left" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="@dimen/item_maintain_tv_name_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_text_margin_left"
        android:layout_marginTop="@dimen/item_maintain_tv_name_top"
        android:layout_toRightOf="@+id/icon_maintain"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="@dimen/item_maintain_tv_name_size" />

</LinearLayout>
</LinearLayout>