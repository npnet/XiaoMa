<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_pop_maintain"
        android:layout_width="@dimen/maintain_detail_img_width"
        android:layout_height="@dimen/maintain_detail_img_height"
        android:layout_marginStart="@dimen/maintain_detail_img_start"
        android:layout_marginTop="@dimen/maintain_detail_img_top"
        android:src="@drawable/car"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_name"
        android:maxLines="1"
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/maintain_detail_img_tv_name_top"
        android:gravity="center"
        android:text="@string/motor_oil"
        android:textColor="@color/white"
        android:textSize="@dimen/maintain_detail_img_tv_name_size"
        app:layout_constraintEnd_toEndOf="@+id/iv_pop_maintain"
        app:layout_constraintStart_toStartOf="@+id/iv_pop_maintain"
        app:layout_constraintTop_toBottomOf="@+id/iv_pop_maintain" />


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="@dimen/maintain_detail_tv_cotent_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/maintain_detail_tv_cotent_left"
        android:layout_marginTop="@dimen/maintain_detail_tv_cotent_top"
        android:ellipsize="end"
        android:lineSpacingExtra="10px"
        android:maxLines="3"
        android:text="@string/motor_oil_text"
        android:textColor="@color/white"
        android:textSize="@dimen/maintain_detail_tv_cotent_size"
        app:layout_constraintLeft_toRightOf="@+id/iv_pop_maintain"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maintain_detail_tv_methods_top"
        android:text="@string/maintenance_text"
        android:textColor="@color/white"
        android:textSize="@dimen/maintain_detail_tv_period_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tv_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_content" />

    <TextView
        android:id="@+id/tv_methods"
        android:layout_width="@dimen/maintain_detail_tv_methods_width"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:text="@string/maintenance_text"
        android:textColor="@color/white"
        android:textSize="@dimen/maintain_detail_tv_methods_size"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView5"
        app:layout_constraintStart_toEndOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/maintain_detail_tv_period_top"
        android:text="@string/maintenance_cycle"
        android:textColor="@color/white"
        android:textSize="@dimen/maintain_detail_tv_period_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/tv_methods" />

    <TextView
        android:id="@+id/tv_period"
        android:layout_width="@dimen/maintain_detail_tv_period_width"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:text="@string/maintenance_cycle"
        android:textColor="@color/white"
        android:textSize="@dimen/maintain_detail_tv_period_size"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView7"
        app:layout_constraintStart_toEndOf="@+id/textView7" />
</android.support.constraint.ConstraintLayout>

