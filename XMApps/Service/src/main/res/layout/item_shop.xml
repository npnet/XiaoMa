<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shop_item_linear"
    android:layout_width="@dimen/item_shop_linear_width"
    android:layout_height="@dimen/item_shop_linear_height"
    android:layout_marginLeft="@dimen/item_shop_linear_left"
    android:background="@drawable/selector_shop_frame"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/check_click"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/check_iv"
            android:layout_width="46px"
            android:layout_height="@dimen/item_shop_check_iv_width"
            android:layout_marginLeft="@dimen/item_shop_check_iv_left"
            android:layout_marginTop="@dimen/item_shop_check_iv_top"
            android:src="@drawable/check_bg" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/details_linear"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="10">

        <ImageView
            android:layout_width="@dimen/item_shop_img_width"
            android:layout_height="@dimen/item_shop_img_height"
            android:layout_marginLeft="@dimen/item_shop_img_left"
            android:layout_marginTop="@dimen/item_shop_img_top"
            android:src="@drawable/default_pic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/item_shop_linear2_left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_shop_name_text_top"
                android:textSize="@dimen/item_shop_name_text_size" />

            <TextView
                android:id="@+id/shop_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_shop_address_text_top"
                android:textSize="@dimen/item_shop_address_text_size" />

            <TextView
                android:id="@+id/shop_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_shop_distance_text_top"
                android:text="@string/not_nvi_info"
                android:textSize="@dimen/item_shop_distance_text_size" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="right">

        <ImageView
            android:id="@+id/shop_phone"
            android:layout_width="@dimen/item_shop_phone_img_width"
            android:layout_height="@dimen/item_shop_phone_img_height"
            android:layout_marginRight="@dimen/item_shop_phone_img_right"
            android:layout_marginTop="@dimen/item_shop_phone_img_top"
            android:src="@drawable/icon_call" />

        <ImageView
            android:id="@+id/shop_navigation"
            android:layout_width="@dimen/item_shop_navigation_img_width"
            android:layout_height="@dimen/item_shop_navigation_img_height"
            android:layout_marginRight="@dimen/item_shop_navigation_img_right"
            android:layout_marginTop="@dimen/item_shop_navigation_img_top"
            android:src="@drawable/icon_navi" />
    </LinearLayout>
</LinearLayout>