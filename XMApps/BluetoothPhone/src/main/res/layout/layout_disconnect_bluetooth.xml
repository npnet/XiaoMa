<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="117px"
        android:layout_marginTop="116px"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/disconnect_bluetooth_hint"
            android:layout_width="488px"
            android:layout_height="311px"
            android:src="@drawable/disconnect_bluetooth"
            android:text="@string/bluetooth_disconnected"
            android:textSize="24px" />

        <com.xiaoma.bluetooth.phone.common.views.MagicTextView
            android:id="@+id/to_connect_bluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="59px"
            android:background="@drawable/bg_button"
            android:gravity="center"
            android:paddingTop="3px"
            android:text="@string/connect_bluetooth"
            android:textColor="#edf6fe"
            android:textSize="22px"
            app:innerShadowRadius="3px"
            app:outerShadowColor="#FF2C99F9"
            app:outerShadowDy="3px"
            app:outerShadowRadius="10px" />

    </LinearLayout>

</LinearLayout>