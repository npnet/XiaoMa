<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/tab_button"
    android:layout_marginTop="10px">

    <ImageView
        android:id="@+id/image_button"
        android:layout_width="@dimen/menu_icon_width"
        android:layout_height="@dimen/menu_icon_width"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/call_history_selector" />

    <ImageView
        android:id="@+id/light_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_selected_light" />

</LinearLayout>