<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/history_call_height"
    android:layout_marginLeft="@dimen/history_call_margin_left"
    android:layout_marginRight="@dimen/history_call_margin_right"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/history_call_status"
        android:layout_width="@dimen/call_type_icon_size"
        android:layout_height="@dimen/call_type_icon_size"
        android:layout_marginTop="@dimen/call_type_margin_top"
        android:background="@drawable/icon_incoming" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/contact_info_margin_left"
        android:layout_toRightOf="@+id/history_call_status"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contact_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/history_text_color"
            android:textSize="@dimen/history_contact_name_text_size" />

        <TextView
            android:id="@+id/phone_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/history_text_color"
            android:textSize="@dimen/history_num_size" />

    </LinearLayout>


    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/history_text_color"
        android:textSize="@dimen/history_data_text_size" />

