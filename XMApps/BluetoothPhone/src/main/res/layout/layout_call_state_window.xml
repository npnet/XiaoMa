<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="24px">

    <LinearLayout
        android:layout_width="@dimen/width_call_window"
        android:layout_height="@dimen/height_call_window"
        android:background="@drawable/bg_call_window">

        <com.xiaoma.bluetooth.phone.common.views.CircleCharAvatarView
            android:id="@+id/head"
            android:layout_width="@dimen/width_call_window_head"
            android:layout_height="@dimen/width_call_window_head" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16px"
            android:orientation="vertical"
            android:paddingBottom="18px"
            android:paddingTop="12px">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:textSize="@dimen/font_call_window_text" />

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#6b7f98"
                android:textSize="@dimen/font_call_window_text" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_more"
        android:gravity="center"
        android:textColor="#6b7f98"
        android:textSize="@dimen/font_call_window_text" />

    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="16px"
        android:layout_height="31px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15px"
        android:layout_marginRight="37px"
        android:src="@drawable/icon_more" />

</RelativeLayout>