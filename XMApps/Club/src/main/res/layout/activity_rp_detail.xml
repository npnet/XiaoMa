<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".msg.redpacket.ui.RPDetailActivity">

    <LinearLayout
        android:layout_width="626px"
        android:layout_height="match_parent"
        android:layout_marginLeft="53px"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/img_send_icon"
            android:layout_width="168px"
            android:layout_height="168px"
            android:layout_gravity="center"
            android:layout_marginTop="145px"
            android:background="@drawable/bg_rp_detail_pic"
            android:padding="16px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_send_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:maxWidth="200px"
                android:ellipsize="end"
                android:textSize="30px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rp_open_dlg_sender_postfix"
                android:textSize="30px" />

            <ImageView
                android:layout_width="37px"
                android:layout_height="40px"
                android:layout_marginLeft="3px"
                android:src="@drawable/rp_msg_item_logo" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_rp_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="42px" />

            <ImageView
                android:layout_width="58px"
                android:layout_height="60px"
                android:layout_marginLeft="10px"
                android:src="@drawable/rp_send_money_icon_middle" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35px"
            android:text="@string/have_deposit_balance"
            android:textSize="30px" />

    </LinearLayout>

    <ImageView
        android:layout_width="72px"
        android:layout_height="640px"
        android:layout_marginTop="45px"
        android:src="@drawable/rp_detail_light_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="78px"
            android:layout_marginTop="105px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_rp_receiver_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30px" />

            <ImageView
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_marginLeft="10px"
                android:src="@drawable/rp_send_money_icon_middle" />
        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_rp_receiver_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="78px"
            android:layout_marginRight="110px"
            android:layout_marginBottom="20px">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</LinearLayout>