<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/location_item_container"
    style="@style/chat_msg_location_container"
    tools:ignore="PxUsage">

    <ImageView
        android:layout_width="135px"
        android:layout_height="124px"
        android:padding="2px"
        android:scaleType="fitXY"
        android:src="@drawable/chat_msg_location_icon_send" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10px"
        android:layout_marginEnd="10px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_poi_name"
            style="@style/item_message_location_poi_send" />

        <TextView
            android:id="@+id/tv_poi_address"
            style="@style/item_message_location_address_send" />
    </LinearLayout>
</LinearLayout>