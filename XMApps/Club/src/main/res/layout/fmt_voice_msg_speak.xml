<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bg_dim"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dim"
    tools:ignore="PxUsage,ContentDescription">

    <LinearLayout
        android:layout_width="654px"
        android:layout_height="450px"
        android:layout_gravity="center"
        android:background="@drawable/location_detail_bg_poi"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50px"
            android:drawablePadding="20px"
            android:gravity="center"
            android:textColor="#ffca89"
            android:textSize="36px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:layout_marginTop="60px"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_wave_start"
                android:layout_width="60px"
                android:layout_height="100px"
                android:layout_gravity="center" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20px"
                android:layout_marginEnd="20px"
                android:src="@drawable/chat_send_voice_recorder_mic" />

            <ImageView
                android:id="@+id/iv_wave_end"
                android:layout_width="60px"
                android:layout_height="100px"
                android:layout_gravity="center" />
        </LinearLayout>

        <TextView
            android:id="@+id/btn_send"
            android:layout_width="170px"
            android:layout_height="70px"
            android:layout_marginTop="10px"
            android:background="@null"
            android:gravity="center"
            android:text="@string/click_to_send"
            android:textColor="@android:color/white"
            android:textSize="30px" />

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="170px"
            android:layout_height="70px"
            android:background="@null"
            android:gravity="center"
            android:text="@string/club_cancel"
            android:textColor="#8a9a9d"
            android:textSize="30px" />
    </LinearLayout>
</FrameLayout>