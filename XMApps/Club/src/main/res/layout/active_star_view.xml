<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/width_group_star"
    android:layout_height="@dimen/height_group_star"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/active_star_image_1"
        android:layout_width="@dimen/height_group_star"
        android:layout_height="@dimen/height_group_star"
        android:paddingRight="@dimen/padding_group_star"
        android:src="@drawable/group_hot"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/active_star_image_2"
        android:layout_width="@dimen/height_group_star"
        android:layout_height="@dimen/height_group_star"
        android:paddingRight="@dimen/padding_group_star"
        android:src="@drawable/group_hot"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/active_star_image_3"
        android:layout_width="@dimen/height_group_star"
        android:layout_height="@dimen/height_group_star"
        android:paddingRight="@dimen/padding_group_star"
        android:src="@drawable/group_hot"
        android:visibility="invisible" />

</LinearLayout>