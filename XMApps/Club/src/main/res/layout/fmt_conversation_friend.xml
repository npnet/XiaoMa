<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/padding_msg_left">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/conversation_friend_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/margin_msg_right" />

    <com.xiaoma.ui.view.XmScrollBar
        android:id="@+id/club_msg_friend_scroll_bar"
        android:layout_width="@dimen/height_xmscroll_bar"
        android:layout_height="@dimen/width_xmscroll_bar"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_scroll_right"
        android:visibility="gone"
        app:xmdirection="vertical" />
</RelativeLayout>