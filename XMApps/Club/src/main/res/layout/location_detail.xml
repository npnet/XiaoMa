<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ContentDescription,HardcodedText,PxUsage">

    <com.amap.api.maps.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:orientation="horizontal"
        android:layout_marginRight="82px"
        android:layout_marginBottom="60px">

        <CheckBox
            android:id="@+id/btn_scale_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:button="@drawable/reduce_button_bg"
            android:alpha="1"/>

        <CheckBox
            android:id="@+id/btn_scale_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:button="@drawable/amplify_button_bg"
            android:layout_marginLeft="-15px"
            android:alpha="1"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/bg_dim"
        android:padding="30px"
        android:scaleType="fitXY"
        android:src="@drawable/icon_back" />

    <Button
        android:id="@+id/btn_my_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="50px"
        android:layout_marginBottom="45px"
        android:background="@drawable/map_location_btn"
        android:visibility="gone"/>

</FrameLayout>
