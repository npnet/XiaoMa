<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="620px"
    android:layout_height="177px"
    android:orientation="horizontal"
    tools:ignore="PxUsage">

    <LinearLayout
        android:id="@+id/location_info_parent"
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_poi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30px"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:textSize="30px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14px"
            android:orientation="horizontal">

            <View
                android:id="@+id/icon_select"
                android:layout_width="16px"
                android:layout_height="20px"
                android:layout_marginStart="5px"
                android:layout_marginTop="6px"
                android:layout_marginEnd="10px"
                android:background="@drawable/send_location_search_item_select_icon" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="#8a919d"
                android:textSize="24px" />
        </LinearLayout>

    </LinearLayout>

    <Space
        android:layout_width="35px"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_send_location"
        android:layout_width="142px"
        android:layout_height="60px"
        android:layout_gravity="center_vertical"
        android:background="@drawable/send_location_btn_bg"
        android:gravity="center_horizontal"
        android:paddingTop="10px"
        android:text="@string/send_location"
        android:textColor="@android:color/white"
        android:textSize="20px" />

    <Space
        android:layout_width="38px"
        android:layout_height="wrap_content" />
</LinearLayout>