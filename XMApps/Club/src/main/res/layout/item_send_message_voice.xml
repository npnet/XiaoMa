<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:ignore="PxUsage,ContentDescription">

    <TextView
        android:id="@+id/tv_voice_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/chat_msg_voice_txt_bottom_padding"
        android:text="60â€³"
        android:textColor="#fff"
        android:textSize="30px" />

    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="480px"
        android:layout_height="wrap_content"
        android:layout_marginStart="30px"
        android:background="@drawable/chat_msg_voice_txt_bg_layerlist"
        android:gravity="center_vertical|end"
        android:paddingBottom="@dimen/chat_msg_voice_txt_bottom_padding">

        <TextView
            android:id="@+id/message_voice_text"
            android:layout_width="0dp"
            android:layout_height="62px"
            android:layout_gravity="center"
            android:layout_marginStart="28px"
            android:layout_marginEnd="28px"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="end|center_vertical"
            android:maxLines="1"
            android:textColor="@color/chat_msg_lighting_text"
            android:textSize="26px" />

        <ImageView
            android:id="@+id/message_voice_wave_image"
            style="@style/chat_msg_voice_playing_wave"
            android:layout_marginEnd="40px"
            android:src="@drawable/chat_msg_voice_playing_send_2" />
    </LinearLayout>
</LinearLayout>