<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_contact_tab"
        android:layout_marginLeft="@dimen/padding_msg_left">

        <android.support.design.widget.TabLayout
            android:id="@+id/conversation_main_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="left"
            app:tabBackground="@null"
            app:tabIndicatorHeight="0dp"
            app:tabPaddingEnd="@dimen/padding_contact_tab_end" />

        <TextView
            android:id="@+id/conversation_onekey_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_msg_right"
            android:text="@string/one_key_read"
            android:textColor="@color/text_sign_number"
            android:textSize="@dimen/font_text_middle" />

    </RelativeLayout>

    <com.xiaoma.ui.view.ControllableViewPager
        android:id="@+id/conversation_main_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_msg_rv_top" />

</LinearLayout>