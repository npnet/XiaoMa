<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <size android:height="@dimen/height_switch_radius" />
            <corners android:radius="@dimen/height_switch_radius" />
            <gradient android:endColor="@color/switch_check_color" android:startColor="@color/switch_check_color" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <size android:height="@dimen/height_switch_radius" />
            <corners android:radius="@dimen/height_switch_radius" />
            <gradient android:endColor="@color/switch_notcheck_color" android:startColor="@color/switch_notcheck_color" />
        </shape>
    </item>

</selector>