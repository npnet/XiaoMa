<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_player">

    <FrameLayout
        android:id="@+id/activity_player_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/activity_player_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_player_iv_back_margin_s"
        android:layout_marginTop="@dimen/size_player_iv_back_margin_t"
        android:padding="@dimen/size_player_iv_back_padding"
        android:src="@drawable/icon_back" />


</FrameLayout>