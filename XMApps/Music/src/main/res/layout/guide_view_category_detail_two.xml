<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_guide_category_child" />

    <ImageView
        android:id="@+id/iv_music_bg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/bg_guide_music_two"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_music"
        android:layout_width="@dimen/px_46"
        android:layout_height="@dimen/px_54"
        android:layout_marginLeft="@dimen/px_85"
        android:layout_marginTop="@dimen/px_95"
        android:src="@drawable/icon_guide_music"
        app:layout_constraintLeft_toLeftOf="@+id/iv_music_bg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="@string/guide_music_play_list"
        android:textColor="@color/color_edf6fe"
        android:textSize="@dimen/px_32"
        app:layout_constraintBottom_toBottomOf="@+id/iv_music"
        app:layout_constraintLeft_toRightOf="@+id/iv_music"
        app:layout_constraintTop_toTopOf="@+id/iv_music" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_43"
        android:text="@string/guide_music_play_list_description"
        android:textColor="@color/color_8a919d"
        android:textSize="@dimen/px_28"
        app:layout_constraintLeft_toLeftOf="@+id/iv_music"
        app:layout_constraintTop_toBottomOf="@+id/iv_music" />

    <ImageView
        android:id="@+id/iv_gesture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:src="@drawable/icon_guide_hand_two"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_guide_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_79"
        android:layout_marginBottom="@dimen/px_60"
        android:background="@drawable/selector_guide_skip"
        android:gravity="center"
        android:paddingBottom="@dimen/px_18"
        android:text="@string/guide_skip"
        android:textColor="@color/color_edf6fe"
        android:textSize="@dimen/px_28"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/iv_music_bg" />
</android.support.constraint.ConstraintLayout>