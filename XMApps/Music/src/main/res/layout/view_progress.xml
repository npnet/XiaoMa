<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.xiaoma.music.player.view.player.XmMusicSeekBar
        android:id="@+id/view_progress_seekbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_seek_bar_margin"
        android:layout_marginEnd="@dimen/size_seek_bar_margin"
        android:maxHeight="@dimen/height_max_seek_bar"
        android:minHeight="@dimen/height_max_seek_bar"
        app:progress="0"/>

    <TextView
        android:id="@+id/time_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_progress_seekbar"
        android:textSize="@dimen/font_view_progress_time"/>

    <TextView
        android:id="@+id/time_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_progress_seekbar"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/font_view_progress_time"/>

</RelativeLayout>