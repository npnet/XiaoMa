<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_big_bg">


    <ImageView
        android:id="@+id/iv_close_vip_pay_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_pay_dialog_title_margin"
        android:layout_marginTop="@dimen/size_pay_dialog_title_margin"
        android:src="@drawable/close_pay_dialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_pay_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pay_dialog_title_prompt"
        android:textSize="@dimen/font_size_px30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_close_vip_pay_dialog" />


    <ImageView
        android:id="@+id/iv_pay_qr_code"
        android:layout_width="@dimen/size_login_qr_code"
        android:layout_height="@dimen/size_login_qr_code"
        android:src="@drawable/iv_nomer_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_pay_desc_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_pay_dialog_desc_margin_top"
        android:textSize="@dimen/font_size_px30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_pay_qr_code" />

</android.support.constraint.ConstraintLayout>