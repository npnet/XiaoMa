<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_item_playlist_margin_t"
    android:layout_marginBottom="@dimen/size_item_playlist_margin_t"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tools:ignore="PxUsage">

    <ImageView
        android:id="@+id/iv_anim"
        android:layout_width="@dimen/width_play_wave_anim"
        android:layout_height="@dimen/height_play_wave_anim"
        android:src="@drawable/player_list_state_loading"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/item_playlist_song_name"
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_item_playlist_song_name_margin_s"
        android:layout_marginEnd="@dimen/size_item_playlist_song_name_margin_e"
        android:layout_weight="1"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textColor="@color/item_playlist_song_name_selector"
        android:textSize="@dimen/font_item_playlist_song_name" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/list_charge_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_item_playlist_song_name_margin_e"
            android:layout_marginRight="@dimen/size_item_playlist_song_name_margin_e"
            android:gravity="center"
            android:paddingLeft="6px"
            android:paddingRight="6px"
            android:textColor="@color/white"
            android:textSize="@dimen/font_item_playlist_song_name" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:textColor="@color/item_playlist_song_name_selector"
        android:textSize="@dimen/font_tv_current_pos" />

</LinearLayout>