<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/quality_view_quality_tv"
        android:layout_width="100px"
        android:layout_height="40px"
        android:background="@drawable/music_quality_text_selector"
        android:drawableRight="@drawable/music_quality_right_iv"
        android:drawablePadding="4px"
        android:gravity="center"
        android:paddingLeft="13px"
        android:paddingRight="13px"
        android:text="@string/quality_fluent"
        android:textColor="@color/search_key_word"
        android:textSize="@dimen/font_search_text_small" />

    <TextView
        android:id="@+id/quality_view_vip_tv"
        android:layout_width="80px"
        android:layout_height="40px"
        android:layout_marginLeft="16px"
        android:background="@drawable/music_quality_vip_bg"
        android:gravity="center"
        android:text="@string/need_vip"
        android:textColor="@color/white"
        android:textSize="@dimen/font_search_text_small"
        android:visibility="invisible" />

</LinearLayout>