<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="335px"
    android:layout_height="85px"
    android:background="@drawable/go_bug_vip_bg"
    android:orientation="horizontal"
    android:paddingTop="15px">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40px"
        android:text="@string/go_buy_vip_text"
        android:textColor="@color/white"
        android:textSize="@dimen/font_search_text_middle" />


    <Button
        android:layout_width="75px"
        android:layout_height="40px"
        android:layout_marginLeft="30px"
        android:background="@drawable/go_buy_vip_btn_selector"
        android:clickable="false"
        android:gravity="center"
        android:text="@string/go_buy_vip"
        android:textColor="@color/white"
        android:textSize="@dimen/font_search_text_small" />

</LinearLayout>