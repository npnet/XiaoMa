<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MicPhoneStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="MicPhoneRecongnizedStyle">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="transparent_dialog_v2" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="limit_text_view_style_light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">#8fa8cc</item>
        <item name="android:textSize">30dp</item>
    </style>


    <style name="limit_text_view_style_dark">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:textColor">#4c97ff</item>
        <item name="android:lineSpacingExtra">10px</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="style_horoscope">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">26px</item>
    </style>

    <style name="style_horoscope_month">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#80ffffff</item>
        <item name="android:textSize">26px</item>
    </style>

    <style name="style_horscope_luck_content_v2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">24px</item>
        <item name="android:paddingRight">50px</item>
        <item name="android:lineSpacingExtra">5px</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">26px</item>
    </style>


    <style name="assistant_help_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">5px</item>
        <item name="android:textSize">28px</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="voice_text_style">
        <item name="android:textSize">20px</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <!--自定义dialog背景全透明无边框theme -->
    <style name="screen_dialog" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>


    <style name="vp_record_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否漂现在activity上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 是否半透明 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 去除黑色边框的关键设置项 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 屏幕背景是否变暗 -->
        <item name="android:backgroundDimAmount">0.3</item>
    </style>

    <style name="XiaoMaTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_common</item>
        <item name="android:windowAnimationStyle">@style/NotAnimation</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:selectableItemBackground">@null</item>
        <item name="android:selectableItemBackgroundBorderless">@null</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
