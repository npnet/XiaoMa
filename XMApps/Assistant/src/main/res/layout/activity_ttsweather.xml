<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingStart="115px">

    <TextView
        android:id="@+id/tv_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="106px"
        android:textColor="@color/white"
        android:textSize="32px"
        tools:text="@string/selected_city_none" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="1527px"
        android:layout_height="match_parent"
        android:layout_alignStart="@+id/tv_choose"
        android:layout_marginTop="206px" />

    <TextView
        android:id="@+id/dialog"
        android:layout_width="120px"
        android:layout_height="120px"
        android:layout_centerInParent="true"
        android:background="@drawable/positioning_popup"
        android:gravity="center"
        android:textColor="#ffffffff"
        android:textSize="50px"
        android:visibility="invisible" />

    <com.xiaoma.assistant.practice.view.SlideBar
        android:id="@+id/sideBar"
        android:layout_width="45px"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginTop="147px"
        android:layout_marginRight="40px" />

    <com.xiaoma.ui.view.XmScrollBar
        android:id="@+id/scrollbar"
        android:layout_width="32px"
        android:layout_height="507px"
        android:layout_alignTop="@+id/sideBar"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20px"
        app:xmdirection="vertical" />

</RelativeLayout>