<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/width_item"
    android:layout_height="@dimen/height_item"
    android:background="@drawable/bg_item"
    android:orientation="vertical"
    android:paddingBottom="@dimen/height_bg_padding_bottom"
    android:paddingLeft="@dimen/height_bg_padding_bottom"
    android:paddingRight="@dimen/height_bg_padding_bottom"
    android:paddingTop="@dimen/height_bg_padding_top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="19px"
        android:paddingLeft="20px"
        android:paddingRight="20px">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="38px"
                android:layout_height="43px"
                android:layout_alignParentLeft="true"
                android:background="@drawable/number_tag"
                android:gravity="center"
                android:paddingBottom="@dimen/height_tag_view_padding_bottom"
                android:text="A"
                android:textColor="@color/white_text"
                android:textSize="24px" />

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="6px"
                android:gravity="center"
                android:textColor="@color/white_text"
                android:textSize="24px" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="77px"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="A"
            android:textColor="@color/white_text"
            android:textSize="28px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="41px"
            android:text="A"
            android:id="@+id/tv_address"
            android:textColor="@color/gray"
            android:textSize="24px" />

        <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_remain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="24px" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>