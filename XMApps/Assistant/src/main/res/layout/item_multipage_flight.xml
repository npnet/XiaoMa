<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340px"
    android:layout_height="406px"
    android:id="@+id/item_parent"
    android:background="@drawable/news_unselected_bg"
    android:orientation="vertical">


    <!--<TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#352e27"
        android:gravity="center"
        android:text="1"
        android:textColor="#ffffff"
        android:textSize="20px" />-->

    <RelativeLayout
        android:id="@+id/num_tag"
        android:layout_width="39px"
        android:layout_height="43px"
        android:layout_marginTop="5px"
        android:layout_marginLeft="27px"
        android:background="@drawable/tag_bg">

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="1"
            android:textColor="#ffffff"
            android:textSize="24px" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/shenzhen"
        android:maxLength="8"
        android:ellipsize="end"
        android:textColor="#ffffff"
        android:textSize="30px" />

    <TextView
        android:id="@+id/tv_total_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10px"
        android:text="@string/total_duration"
        android:textColor="#e1e2e5"
        android:textSize="24px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30px"
        android:layout_marginLeft="25px"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:orientation="vertical">

            <ImageView
                android:layout_width="35px"
                android:layout_height="35px"
                android:background="@drawable/start_tag" />

            <ImageView
                android:layout_width="1px"
                android:layout_height="60px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10px"
                android:background="#ffffff" />

            <ImageView
                android:layout_width="35px"
                android:layout_height="35px"
                android:background="@drawable/end_tag"
                android:layout_marginTop="10px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="24px"
            android:layout_marginTop="3px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="@string/shenzhen"
                android:maxLength="8"
                android:ellipsize="end"
                android:textSize="28px" />

            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14:48"
                android:textColor="#e1e2e5"
                android:textSize="20px" />

            <!--<View
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1" />-->

            <TextView
                android:id="@+id/tv_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:maxLength="6"
                android:ellipsize="end"
                android:layout_marginTop="45px"
                android:text="@string/beijing"
                android:textSize="28px" />

            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#e1e2e5"
                android:text="17:50"
                android:textSize="20px" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>