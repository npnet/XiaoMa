<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1024px"
    android:layout_height="236px"
    android:background="@drawable/single_item_msg_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_title"
        android:layout_width="wrap_content"
        android:layout_marginLeft="58px"
        android:layout_marginTop="30px"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="38px"
            android:layout_height="38px"
            android:src="@drawable/icon_schedule" />

        <TextView
            android:id="@+id/tv_records"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5px"
            android:layout_toRightOf="@id/iv_close"
            android:gravity="center"
            android:text="@string/create_a_schedule_result_as_follows"
            android:textColor="@color/white"
            android:textSize="28px" />

    </LinearLayout>


    <ImageView
        android:id="@+id/iv_assistant_diver"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_below="@id/layout_title"
        android:layout_marginTop="15px"
        android:background="#ffffff" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20px"
        android:gravity="center"
        android:text="@string/data"
        android:layout_marginLeft="62px"
        android:layout_below="@id/iv_assistant_diver"
        android:textColor="@color/white"
        android:textSize="24px" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_toRightOf="@id/tv_date"
        android:layout_marginLeft="166px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20px"
        android:gravity="center"
        android:text="@string/time"
        android:layout_below="@id/iv_assistant_diver"
        android:textColor="@color/white"
        android:textSize="24px" />

    <TextView
        android:id="@+id/tv_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10px"
        android:gravity="center"
        android:layout_below="@id/tv_date"
        android:text="@string/matter"
        android:layout_marginLeft="60px"
        android:textColor="@color/white"
        android:textSize="24px" />

    <TextView
        android:id="@+id/tv_item"
        android:layout_toRightOf="@id/tv_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10px"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_below="@id/tv_time"
        android:textColor="@color/white"
        android:text="@string/temporary_text_no_translation"
        android:textSize="24px" />


</RelativeLayout>