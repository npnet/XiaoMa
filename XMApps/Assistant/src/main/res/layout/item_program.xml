<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/width_item"
    android:layout_height="@dimen/height_item"
    android:background="@drawable/bg_item"
    android:orientation="vertical"
    android:paddingBottom="@dimen/height_bg_padding_bottom"
    android:paddingLeft="@dimen/height_bg_padding_bottom"
    android:paddingRight="@dimen/height_bg_padding_bottom"
    android:paddingTop="@dimen/height_bg_padding_top">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="232px">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/width_item_padding_left"
            android:paddingRight="@dimen/width_item_padding_left">

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="38px"
                android:layout_height="43px"
                android:layout_alignParentLeft="true"
                android:background="@drawable/number_tag"
                android:gravity="center"
                android:paddingBottom="@dimen/height_tag_view_padding_bottom"
                android:text="A"
                android:textColor="@color/white_text"
                android:textSize="24px" />

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22px"
        android:orientation="vertical"
        android:paddingLeft="@dimen/width_item_padding_left"
        android:paddingRight="@dimen/width_item_padding_left">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="A"
            android:textColor="@color/white_text"
            android:textSize="28px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingBottom="32px"
            android:text="A"
            android:textColor="@color/gray"
            android:textSize="24px" />

    </LinearLayout>


</LinearLayout>
