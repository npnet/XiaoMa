<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="115px"
        android:layout_marginTop="106px"
        android:text="@string/pre_tts_some"
        android:textColor="@color/white"
        android:textSize="32px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_voice"
        android:layout_width="1410px"
        android:layout_height="140px"
        android:layout_marginStart="245px"
        android:layout_marginTop="248px"
        android:background="@drawable/bg_et_tts"
        android:hint="@string/example_good_morning"
        android:maxLength="30"
        android:maxLines="1"
        android:paddingStart="27px"
        android:textColor="@color/white"
        android:textColorHint="#8a919d"
        android:textSize="30px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_voice"
        android:layout_width="59px"
        android:layout_height="89px"
        android:layout_marginStart="165px"
        android:padding="10px"
        android:src="@drawable/icon_mic"
        app:layout_constraintBottom_toBottomOf="@+id/et_voice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_voice" />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="100px"
        android:layout_height="wrap_content"
        android:layout_marginTop="8px"
        android:gravity="end"
        android:text="0/30"
        android:textColor="#8a919d"
        android:textSize="24px"
        app:layout_constraintEnd_toEndOf="@id/et_voice"
        app:layout_constraintTop_toBottomOf="@+id/et_voice" />

    <Button
        android:id="@+id/btn_sure"
        android:layout_width="302px"
        android:layout_height="80px"
        android:layout_marginTop="545px"
        android:background="@drawable/btn_selector"
        android:paddingBottom="10px"
        android:text="@string/sure"
        android:textSize="30px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>