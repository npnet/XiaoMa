<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20px"
    android:background="@drawable/bg_assistant_item"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_assistant_time_icon"
        android:layout_width="60px"
        android:layout_height="80px"
        android:src="@drawable/ic_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="80px"
        android:textSize="25px"
        android:text="@string/time"
        android:gravity="center"
        android:layout_toRightOf="@id/iv_assistant_time_icon" />

    <ImageView
        android:id="@+id/iv_assistant_diver"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@id/iv_assistant_time_icon"
        android:background="#FF3300"/>


    <TextView
        android:id="@+id/tv_assistant_time_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:layout_below="@id/iv_assistant_diver"
        android:textSize="25px"/>


</RelativeLayout>