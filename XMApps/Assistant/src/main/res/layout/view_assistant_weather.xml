<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1025px"
    android:background="@drawable/single_item_msg_bg"
    android:layout_height="381px">

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_assistant_traffic_icon"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_marginLeft="60px"
            android:src="@drawable/icon_weather" />

        <TextView
            android:id="@+id/tv_weather_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10px"
            android:text="@string/shenzhen"
            android:textColor="@color/white_text"
            android:textSize="28px" />

        <TextView
            android:id="@+id/tv_weather_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/weather_query_results_are_as_follows"
            android:textColor="@color/white_text"
            android:textSize="28px" />
    </LinearLayout>

    <ImageView
        android:id="@+id/view_weather_diver"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="30px"
        android:layout_marginTop="16px"
        android:layout_below="@id/ll_title"
        android:background="#33ffffff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view_weather_diver">

        <LinearLayout
            android:id="@+id/layout_weather_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="105px"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_weather_icon"
                android:layout_width="105px"
                android:layout_height="105px"
                android:padding="10px"
                android:layout_marginTop="66px"
                android:background="@drawable/icon_big_weather" />

            <TextView
                android:id="@+id/tv_weather_degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:text="35-37℃"
                android:textColor="@color/white_text"
                android:textSize="30px" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_weather_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="52px"
            android:layout_marginRight="40px"
            android:layout_marginTop="60px"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_weather_day"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:text="@string/tomorrow"
                    android:textColor="@color/white_text"
                    android:textSize="30px" />

                <TextView
                    android:id="@+id/tv_weather_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:text="10/10"
                    android:layout_marginLeft="45px"
                    android:textColor="#9a919d"
                    android:textSize="30px" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_weather_air"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginTop="20px"
                android:text="@string/air_high_quality"
                android:layout_gravity="right"
                android:textColor="#9a919d"
                android:textSize="30px" />

            <TextView
                android:id="@+id/tv_weather_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|bottom"
                android:layout_marginTop="30px"
                android:text="@string/partly_cloudy"
                android:textColor="#9a919d"
                android:textSize="30px" />

        </LinearLayout>

        <ImageView
            android:id="@+id/view_weather_diver2"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#33ffffff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="40px"
            android:layout_marginRight="53px"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="30px"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_date1"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="10/11"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white_text"
                android:textSize="24px" />

                <TextView
                    android:id="@+id/tv_temperature1"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="35-37℃"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white_text"
                    android:textSize="24px" />

                <TextView
                    android:id="@+id/tv_weather1"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/partly_cloudy"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:textColor="@color/white_text"
                    android:textSize="24px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="30px"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_date2"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="10/11"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white_text"
                    android:textSize="24px" />

                <TextView
                    android:id="@+id/tv_temperature2"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="35-37℃"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white_text"
                    android:textSize="24px" />

                <TextView
                    android:id="@+id/tv_weather2"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/partly_cloudy"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:textColor="@color/white_text"
                    android:textSize="24px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="30px"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_date3"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="10/11"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white_text"
                    android:textSize="24px" />

                <TextView
                    android:id="@+id/tv_temperature3"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="35-37℃"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white_text"
                    android:textSize="24px" />

                <TextView
                    android:id="@+id/tv_weather3"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/partly_cloudy"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:textColor="@color/white_text"
                    android:textSize="24px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="30px"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_date4"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="10/11"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white_text"
                    android:textSize="24px" />

                <TextView
                    android:id="@+id/tv_temperature4"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="35-37℃"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/white_text"
                    android:textSize="24px" />

                <TextView
                    android:id="@+id/tv_weather4"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/partly_cloudy"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:textColor="@color/white_text"
                    android:textSize="24px" />

            </LinearLayout>


            <!--<TextView
                android:id="@+id/tv_weather_day2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_weather_day1"
                android:padding="20px"
                android:textColor="@color/white_text"
                android:textSize="24px" />

            <TextView
                android:id="@+id/tv_weather_day3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_weather_day2"
                android:padding="20px"
                android:textColor="@color/white_text"
                android:textSize="24px" />

            <TextView
                android:id="@+id/tv_weather_day4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_weather_day3"
                android:padding="20px"
                android:textColor="@color/white_text"
                android:textSize="24px" />-->

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>