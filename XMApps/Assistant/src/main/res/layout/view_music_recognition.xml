<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#352e27"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20px">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="50px"
            android:layout_height="50px"
            android:src="@drawable/ic_icon" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_records"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:padding="20px"
        android:text="@string/Identification_record"
        android:textColor="@color/white"
        android:textSize="25px" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100px"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_recognition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_recognition"
            android:layout_marginTop="20px"
            android:gravity="center"
            android:text="@string/identifying_music"
            android:textColor="@color/white"
            android:textSize="25px" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20px"
        android:layout_marginTop="20px"
        android:gravity="center"
        android:text="@string/click_the_icon_to_stop_identifying"
        android:textColor="@color/white"
        android:textSize="25px" />

</RelativeLayout>