<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_click_into_assistant"
        android:layout_width="200px"
        android:layout_height="100px"
        android:layout_gravity="center"
        android:text="@string/open_voice_assistant"
        android:textSize="25px" />

    <Button
        android:id="@+id/btn_back_pressed"
        android:layout_width="200px"
        android:layout_height="100px"
        android:layout_gravity="center"
        android:text="@string/assistant_back"
        android:textSize="25px" />

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black"
        android:gravity="center">

        <TextView
            android:id="@+id/id_tts_phone"
            android:layout_width="500px"
            android:layout_height="40px"
            android:gravity="center"
            android:background="@color/white"
            android:textColor="@color/black"
            android:textSize="30px"
            android:layout_margin="10px"
            android:text="蓝牙电话tts播报" />

        <TextView
            android:id="@+id/id_tts_assistant"
            android:layout_width="500px"
            android:layout_height="40px"
            android:gravity="center"
            android:textSize="30px"
            android:layout_margin="10px"
            android:textColor="@color/black"
            android:background="@color/white"

            android:text="语音tts播报" />

        <TextView
            android:id="@+id/id_tts_third"
            android:layout_width="500px"
            android:layout_height="40px"
            android:gravity="center"
            android:background="@color/white"
            android:textSize="30px"
            android:layout_margin="10px"
            android:textColor="@color/black"
            android:text="三方非小马应用tts播报" />

        <TextView
            android:id="@+id/id_tts_navi"
            android:layout_width="500px"
            android:layout_height="40px"
            android:gravity="center"
            android:background="@color/white"
            android:textSize="30px"
            android:layout_margin="10px"
            android:textColor="@color/black"
            android:text="导航tts播报" />

        <TextView
            android:id="@+id/id_tts_xiaoma"
            android:layout_width="500px"
            android:layout_height="40px"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@color/white"
            android:textSize="30px"
            android:layout_margin="10px"
            android:text="小马应用tts播报" />
    </LinearLayout>

</LinearLayout>