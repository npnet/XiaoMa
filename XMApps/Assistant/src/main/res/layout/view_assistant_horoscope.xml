<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_receive_messages_v2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="78px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_horscope"
                android:layout_width="35px"
                android:layout_height="35px"
                android:layout_marginLeft="30px"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/horscope_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23px"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:textSize="30px" />

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/ll_day_luck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#589764" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="50px"
                android:layout_marginTop="35px"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/luck_all_score"
                        style="@style/style_horoscope"
                        android:text="@string/horoscope_all_luck" />

                    <TextView
                        android:id="@+id/luck_love_score"
                        style="@style/style_horoscope"
                        android:text="@string/horoscope_love_score" />

                    <TextView
                        android:id="@+id/luck_money_score"
                        style="@style/style_horoscope"
                        android:text="@string/horoscope_money_score" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28px"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/luck_color"
                        style="@style/style_horoscope"
                        android:text="@string/horoscope_luck_color" />


                    <TextView
                        android:id="@+id/luck_horscope"
                        style="@style/style_horoscope"
                        android:text="@string/horoscope_luck_horoscope" />

                    <TextView
                        style="@style/style_horoscope"
                        android:visibility="invisible" />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_wmy_luck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_luck_all_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#589764" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18px"
                    android:layout_marginTop="18px"
                    android:orientation="horizontal">

                    <!--综合-->
                    <TextView
                        android:id="@+id/luck_all_title"
                        style="@style/style_horoscope_month"
                        android:layout_marginLeft="30px"
                        android:text="@string/horoscope_luck_all" />

                    <TextView
                        android:id="@+id/luck_all_desc"
                        style="@style/style_horscope_luck_content_v2" />
                </LinearLayout>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_luck_health_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="55px"
                    android:layout_marginTop="18px"
                    android:orientation="horizontal">

                    <!--健康-->
                    <TextView
                        android:id="@+id/luck_health_title"
                        style="@style/style_horoscope_month"
                        android:text="@string/horoscope_health" />

                    <TextView
                        android:id="@+id/luck_health_desc"
                        style="@style/style_horscope_luck_content_v2" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#589764" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_luck_work_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="55px"
                    android:layout_marginTop="18px"
                    android:orientation="horizontal">

                    <!--事业-->
                    <TextView
                        android:id="@+id/luck_work_title"
                        style="@style/style_horoscope_month"
                        android:text="@string/horoscope_work" />

                    <TextView
                        android:id="@+id/luck_work_desc"
                        style="@style/style_horscope_luck_content_v2" />

                </LinearLayout>

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#589764" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_luck_love_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="55px"
                    android:layout_marginTop="18px"
                    android:orientation="horizontal">

                    <!--爱情-->
                    <TextView
                        android:id="@+id/luck_love_title"
                        style="@style/style_horoscope_month"
                        android:text="@string/horoscope_love" />

                    <TextView
                        android:id="@+id/luck_love_desc"
                        style="@style/style_horscope_luck_content_v2" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#589764" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_luck_money_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18px"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="55px"
                    android:layout_marginTop="18px"
                    android:orientation="horizontal">

                    <!--财富-->
                    <TextView
                        android:id="@+id/luck_money_title"
                        style="@style/style_horoscope_month"
                        android:text="@string/horoscope_money" />

                    <TextView
                        android:id="@+id/luck_money_desc"
                        style="@style/style_horscope_luck_content_v2" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#589764" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>