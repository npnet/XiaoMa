<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_answer"
    android:paddingBottom="@dimen/height_dialing_box_padding_top"
    android:paddingLeft="@dimen/width_dialing_box_padding_left"
    android:paddingRight="@dimen/width_dialing_box_padding_left"
    android:paddingTop="@dimen/height_dialing_box_padding_top">

    <com.xiaoma.assistant.view.ObservableScrollView
        android:id="@+id/scrollView"
        android:layout_width="907px"
        android:layout_height="277px"
        android:overScrollMode="never"
        android:scrollbars="none">

        <TextView
            android:id="@+id/tv_received_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="24px" />

    </com.xiaoma.assistant.view.ObservableScrollView>

    <com.xiaoma.assistant.view.VerticalScrollBar
        android:id="@+id/scrollbar"
        android:layout_width="10px"
        android:layout_height="264px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="37px"
        android:layout_toRightOf="@+id/scrollView"
        android:paddingLeft="@dimen/width_scroll_bar_touch_sensitivity"
        android:paddingRight="@dimen/width_scroll_bar_touch_sensitivity" />

</RelativeLayout>
