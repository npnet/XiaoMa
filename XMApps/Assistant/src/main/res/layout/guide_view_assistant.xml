<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/guide_container"
    >

    <ImageView
        android:id="@+id/iv_guide_bg"
        android:layout_width="@dimen/px_1045"
        android:layout_height="match_parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/guide_bg"/>

    <TextView
        android:id="@+id/tv_guide_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_80"
        android:layout_marginTop="@dimen/px_106"
        android:text="@string/guide_try_assistant"
        android:textColor="@color/color_edf6fe"
        android:textSize="@dimen/px_32"
        app:layout_constraintLeft_toLeftOf="@+id/iv_guide_bg"
        app:layout_constraintTop_toTopOf="@+id/iv_guide_bg" />

    <TextView
        android:id="@+id/tv_guide_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_8a919d"
        android:textSize="@dimen/px_28"
        android:layout_marginTop="@dimen/px_53"
        app:layout_constraintLeft_toLeftOf="@+id/tv_guide_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_guide_title" />
</android.support.constraint.ConstraintLayout>