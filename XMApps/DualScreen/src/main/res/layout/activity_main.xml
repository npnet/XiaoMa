<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_content"
    tools:context=".ui.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <FrameLayout
            android:id="@+id/fl_fullscreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />

        <FrameLayout
            android:id="@+id/fl_left_navi"
            android:layout_width="414px"
            android:layout_height="414px"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="249px"
            android:layout_marginTop="166px"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="525px"
            android:layout_height="match_parent"
            android:layout_marginLeft="698px"
            android:layout_marginTop="168px"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/fl_simple"
                android:layout_width="524px"
                android:layout_height="28px"
                android:visibility="invisible" />

            <FrameLayout
                android:id="@+id/fl_center"
                android:layout_width="440px"
                android:layout_height="440px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8px"
                android:visibility="invisible" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_key_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5px"
                android:text="向上" />

            <Button
                android:id="@+id/btn_key_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5px"
                android:text="向下" />

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5px"
                android:text="确认" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5px"
                android:text="取消" />

            <Button
                android:id="@+id/btn_tab_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5px"
                android:text="电话" />

            <Button
                android:id="@+id/btn_tab_media"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5px"
                android:text="音乐" />

            <Button
                android:id="@+id/btn_tab_full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5px"
                android:text="全屏" />

            <Button
                android:id="@+id/btn_left_nav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5px"
                android:text="左边导航显示" />

            <Button
                android:id="@+id/btn_left_nav_gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5px"
                android:text="左边导航隐藏" />

            <Button
                android:id="@+id/btn_simple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5px"
                android:text="概要信息" />

            <Button
                android:id="@+id/btn_phone_coming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5px"
                android:text="来电显示" />

            <Button
                android:id="@+id/btn_phone_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5px"
                android:text="呼叫联系人" />

            <Button
                android:id="@+id/btn_phone_other_coming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5px"
                android:text="三方通话来电显示" />

            <Button
                android:id="@+id/btn_phone_other_calling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5px"
                android:text="三方通话正在通话" />

            <Button
                android:id="@+id/btn_phone_contacting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5px"
                android:text="通话中" />

            <Button
                android:id="@+id/btn_no_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5px"
                android:text="无通话记录" />

            <Button
                android:id="@+id/btn_get_call_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5px"
                android:text="最近通话记录" />

        </LinearLayout>

    </LinearLayout>


</FrameLayout>