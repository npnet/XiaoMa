<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dimen_160"
    android:layout_height="@dimen/dimen_220"
    android:orientation="vertical">

    <com.xiaoma.ui.view.ReflectionImageView
        android:id="@+id/iv_cover"
        android:layout_width="@dimen/dimen_160"
        android:layout_height="@dimen/dimen_220"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        app:reflectionHeight="56px"
        app:reflectionPadding="4px" />

    <View
        android:id="@+id/icon_bg"
        android:layout_width="@dimen/dimen_160"
        android:layout_height="@dimen/dimen_160"
        android:background="@drawable/img_video_play" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="@dimen/dimen_160"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_175"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/tab_tv_color_pressed"
        android:textSize="@dimen/dimen_24" />

</RelativeLayout>