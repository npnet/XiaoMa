<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_filter"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_70"
    android:gravity="center_vertical"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="@dimen/dimen_70"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="@string/filter_name"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_28" />

    <ImageView
        android:id="@+id/iv_name"
        android:layout_width="@dimen/dimen_36"
        android:layout_height="@dimen/dimen_26"
        android:layout_marginEnd="@dimen/dimen_110"
        android:src="@drawable/icon_up" />


    <TextView
        android:id="@+id/tv_date"
        android:layout_width="@dimen/dimen_70"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="@string/filter_date"
        android:textColor="@color/color_8a919d"
        android:textSize="@dimen/dimen_28" />

    <ImageView
        android:id="@+id/iv_date"
        android:layout_width="@dimen/dimen_36"
        android:layout_height="@dimen/dimen_26"
        android:layout_marginEnd="@dimen/dimen_110"
        android:src="@drawable/icon_default" />

    <TextView
        android:id="@+id/tv_size"
        android:layout_width="@dimen/dimen_70"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="@string/filter_size"
        android:textColor="@color/color_8a919d"
        android:textSize="@dimen/dimen_28" />

    <ImageView
        android:id="@+id/iv_size"
        android:layout_width="@dimen/dimen_36"
        android:layout_height="@dimen/dimen_26"
        android:src="@drawable/icon_default" />

</LinearLayout>