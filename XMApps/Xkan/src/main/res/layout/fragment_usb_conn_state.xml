<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/iv_usb"
        android:layout_width="@dimen/dimen_561"
        android:layout_height="@dimen/dimen_514"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_206"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/icon_usb_no_connect" />

    <TextView
        android:id="@+id/usb_conn_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_269"
        android:text="@string/usb_conn_state_remove"
        android:textSize="@dimen/dimen_30" />

</RelativeLayout>