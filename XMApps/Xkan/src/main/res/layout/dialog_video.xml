<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rec_dialog_date">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_title_margin_top"
        android:textColor="@color/white"
        android:textSize="@dimen/dialog_title_text_size"
        android:text="@string/tips"/>

    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50px"
        android:gravity="center"
        android:lineSpacingExtra="10px"
        android:text="@string/driving_watch_video_message"
        android:textColor="@color/white"
        android:textSize="@dimen/dialog_message_text_size" />


    <TextView
        android:id="@+id/dialog_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_message"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10px"
        android:gravity="center"
        android:lineSpacingExtra="10px"
        android:text="@string/driving_watch_video_tip"
        android:textColor="@color/color_8a919d"
        android:textSize="@dimen/dialog_message_text_size" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50px">

        <TextView
            android:id="@+id/btn_sure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/driving_watch_video_replay"
            android:textColor="@color/color_dialog_button_text"
            android:textSize="@dimen/dialog_btn_sure_text_size" />

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/driving_watch_video_stop_close"
            android:textColor="@color/color_dialog_button_text"
            android:textSize="@dimen/dialog_btn_cancel_text_size" />
    </LinearLayout>

</RelativeLayout>