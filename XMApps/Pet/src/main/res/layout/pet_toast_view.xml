<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/width_pet_toast"
    android:layout_height="@dimen/height_pet_toast"
    android:background="@drawable/pet_toast_bg"
    android:gravity="center"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/iv_pet_toast_icon"
        android:layout_width="@dimen/size_pet_toast_icon"
        android:layout_height="@dimen/size_pet_toast_icon"
        android:src="@drawable/pet_toast_icon_bg" />


    <TextView
        android:id="@+id/pet_toast_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_pet_toast_text_margin_start"
        android:text="@string/no_network"
        android:textColor="@android:color/white"
        android:textSize="@dimen/pet_font_size_36" />

</LinearLayout>