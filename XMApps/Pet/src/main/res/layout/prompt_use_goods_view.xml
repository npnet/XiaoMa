<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pet_dialog_bg">

    <TextView
        android:id="@+id/tv_pet_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_pet_prompt_dialog_title_margin_top"
        android:text="@string/buy_success"
        android:textColor="@android:color/white"
        android:textSize="@dimen/pet_font_size_36"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_pet_dialog_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_pet_prompt_dialog_desc_margin_top"
        android:text="是否直接使用当前饰品"
        android:textColor="@android:color/white"
        android:textSize="@dimen/pet_font_size_30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_pet_dialog_title" />


    <TextView
        android:id="@+id/tv_pet_dialog_confirm"
        android:layout_width="@dimen/width_pet_prompt_dialog_button"
        android:layout_height="@dimen/height_pet_prompt_dialog_button"
        android:layout_marginBottom="@dimen/size_pet_prompt_dialog_button_margin_bottom"
        android:background="@drawable/confirm_pay_selector"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@android:color/white"
        android:textSize="@dimen/pet_font_size_26"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_pet_dialog_cancel"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_pet_dialog_cancel"
        android:layout_width="@dimen/width_pet_prompt_dialog_button"
        android:layout_height="@dimen/height_pet_prompt_dialog_button"
        android:layout_marginBottom="@dimen/size_pet_prompt_dialog_button_margin_bottom"
        android:background="@drawable/confirm_pay_selector"
        android:gravity="center"
        android:text="@string/cancel_use_goods"
        android:textColor="@android:color/white"
        android:textSize="@dimen/pet_font_size_26"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_pet_dialog_confirm" />

</android.support.constraint.ConstraintLayout>