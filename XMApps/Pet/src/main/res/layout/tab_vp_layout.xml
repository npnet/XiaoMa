<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout_pet"
        android:layout_width="0dp"
        android:layout_height="56px"
        android:layout_marginTop="@dimen/size_mall_product_list_tab"
        android:scrollIndicators="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabIndicatorColor="@color/color_transparent"
        app:tabMode="scrollable"/>

    <com.xiaoma.pet.ui.view.DisableSwipeViewPager
        android:id="@+id/view_pager_pet"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20px"
        android:overScrollMode="never"
        android:layout_marginTop="15px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tab_layout_pet" />
</android.support.constraint.ConstraintLayout>