<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5px">


    <com.xiaoma.setting.common.views.SettingCheckView
        android:id="@+id/scv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_power_view_height" />

    <com.xiaoma.setting.common.views.SegmentControl
        android:id="@+id/segment_control"
        style="@style/Segment"
        android:layout_width="400px"
        android:layout_height="35px"
        android:layout_below="@+id/scv"
        android:visibility="gone"
        app:cornerRadius="5dp"
        app:horizonGap="30dp"
        app:normalColor="#2b2b2b"
        app:selectedColor="#32ADFF"
        app:separatorWidth="0dp"
        app:textColors="#ffffff"
        app:verticalGap="10dp" />

    <View
        android:id="@+id/line"
        style="@style/line"
        android:layout_below="@+id/segment_control"
        android:layout_marginTop="20px" />
</RelativeLayout>