<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="713px"
    android:layout_height="443px"
    android:background="@drawable/dialog_bg_middle"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15px"
        android:text="@string/notification"
        android:textSize="36px"
        android:textColor="#fff"/>

    <TextView
        android:id="@+id/msg"
        android:layout_width="wrap_content"
        android:layout_height="200px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80px"
        android:layout_marginLeft="75px"
        android:layout_marginRight="75px"
        android:gravity="top|center_horizontal"
        android:text=""
        android:textColor="#fff"
        android:textSize="30px"
        android:lineSpacingExtra="15px"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/divide_line" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/confirm"
           android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="80px"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@drawable/text_button_color"
            android:textSize="28px"
            android:background="@drawable/bg_dialog_button"/>
        <ImageView
            android:id="@+id/image_divide_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/divide_vertical" />
        <TextView
            android:id="@+id/cancel"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="80px"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@drawable/text_button_color"
            android:text="@string/cancel"
            android:textSize="28px"
            android:background="@drawable/bg_dialog_button"
            />
    </LinearLayout>

</LinearLayout>