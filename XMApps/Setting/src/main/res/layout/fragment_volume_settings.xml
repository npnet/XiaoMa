<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="-10px"
        android:paddingBottom="@dimen/size_volume_linearlayout_padding_bottom"
        android:paddingLeft="@dimen/size_volume_linearlayout_padding_left">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/size_volume_title_width"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingTop="@dimen/size_volume_title_textview_padding_top"
                android:text="@string/media_volume"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_seekbar_min_text_margin_left"
                android:gravity="center"
                android:paddingTop="@dimen/size_volume_title_textview_padding_top"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_number" />

            <com.xiaoma.setting.common.views.TextTackSeekBar
                android:id="@+id/media_volume_seekbar"
                style="@style/style_setting_seekbar"
                android:layout_width="@dimen/width_texttack_seekbar"
                android:layout_marginLeft="@dimen/size_seekbar_margin_left"
                android:max="40" />

            <TextView
                android:id="@+id/media_volume_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_seekbar_margin_left"
                android:gravity="center"
                android:paddingTop="@dimen/size_volume_title_textview_padding_top"
                android:text="40"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_seekbar_layout_margin_top">

            <TextView
                android:layout_width="@dimen/size_volume_title_width"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingTop="@dimen/size_volume_title_textview_padding_top"
                android:text="@string/bluetooth_music"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_seekbar_min_text_margin_left"
                android:gravity="center"
                android:paddingTop="@dimen/size_volume_title_textview_padding_top"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_number" />

            <com.xiaoma.setting.common.views.TextTackSeekBar
                android:id="@+id/bluetooth_music_seekbar"
                style="@style/style_setting_seekbar"
                android:layout_width="@dimen/width_texttack_seekbar"
                android:layout_marginLeft="@dimen/size_seekbar_margin_left"
                android:max="40" />

            <TextView
                android:id="@+id/bluetooth_music_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_seekbar_margin_left"
                android:gravity="center"
                android:paddingTop="@dimen/size_volume_title_textview_padding_top"
                android:text="40"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_seekbar_layout_margin_top">

            <TextView
                android:layout_width="@dimen/size_volume_title_width"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingTop="@dimen/size_volume_title_textview_padding_top"
                android:text="@string/call_volume"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_seekbar_min_text_margin_left"
                android:gravity="center"
                android:paddingTop="@dimen/size_volume_title_textview_padding_top"
                android:text="1"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_number" />

            <com.xiaoma.setting.common.views.TextTackSeekBar
                android:id="@+id/call_volume_seekbar"
                style="@style/style_setting_seekbar"
                android:layout_width="@dimen/width_texttack_seekbar"
                android:layout_marginLeft="@dimen/size_seekbar_margin_left"
                android:min="1"
                android:max="40" />

            <TextView
                android:id="@+id/call_volume_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_seekbar_margin_left"
                android:gravity="center"
                android:paddingTop="@dimen/size_volume_title_textview_padding_top"
                android:text="40"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_seekbar_layout_margin_top">

            <TextView
                android:layout_width="@dimen/size_volume_title_width"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingTop="@dimen/size_volume_title_textview_padding_top"
                android:text="@string/speech_volume"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_seekbar_min_text_margin_left"
                android:gravity="center"
                android:paddingTop="@dimen/size_volume_title_textview_padding_top"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_number" />

            <com.xiaoma.setting.common.views.TextTackSeekBar
                android:id="@+id/speech_volume_seekbar"
                style="@style/style_setting_seekbar"
                android:layout_width="@dimen/width_texttack_seekbar"
                android:layout_marginLeft="@dimen/size_seekbar_margin_left"
                android:max="8" />

            <TextView
                android:id="@+id/speech_volume_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_seekbar_margin_left"
                android:gravity="center"
                android:paddingTop="@dimen/size_volume_title_textview_padding_top"
                android:text="8"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_number" />
        </LinearLayout>

        <com.xiaoma.setting.common.views.SettingSwitch
            android:id="@+id/switch_on_off_music"
            style="@style/style_setting_item_v2"
            android:layout_marginBottom="10px"
            android:layout_marginTop="59px"
            app:marginLeft="0px"
            app:titleTexts="@string/on_off_music"
            app:titleWidth="@dimen/width_title_textview" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="@dimen/width_title_textview"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0px"
                    android:layout_marginTop="@dimen/size_radio_btn_layout_margin_top"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/car_info_sound"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0px"
                    android:layout_marginTop="@dimen/size_radio_btn_layout_margin_top"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/park_media_volume"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_title" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.xiaoma.setting.common.views.RadioButtonLayout
                    android:id="@+id/car_info_sound_radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="0px"
                    android:layout_marginTop="@dimen/size_radio_btn_layout_margin_top"
                    android:layout_weight="1"
                    app:buttonNames="@string/car_info_sound_options" />


                <com.xiaoma.setting.common.views.RadioButtonLayout
                    android:id="@+id/park_media_volume_radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="0px"
                    android:layout_marginTop="@dimen/size_radio_btn_layout_margin_top"
                    android:layout_weight="1"
                    app:buttonNames="@string/park_media_volume_options" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_radio_btn_layout_margin_top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/car_speed_volume_compensate"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_title" />

            <TextView
                android:layout_marginLeft="20px"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/car_speed_volume_compensate_hint"
                android:textColor="@color/default_tick_mark_text_color"
                android:textSize="@dimen/remark_font_title" />

        </LinearLayout>

        <com.xiaoma.setting.common.views.RadioButtonLayout
            android:id="@+id/car_speed_volume_compensate_radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="0px"
            android:layout_marginLeft="@dimen/width_title_textview"
            android:layout_marginTop="11px"
            android:layout_weight="1"
            app:buttonNames="@string/car_speed_volume_compensate_options" />

    </LinearLayout>


</ScrollView>