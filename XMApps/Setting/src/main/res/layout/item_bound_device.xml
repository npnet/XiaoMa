<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/bound_devices_item_margin">

    <TextView
        android:id="@+id/blt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="@dimen/bluetooth_title_text_size" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/edit_blt_name_padding"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bind"
            android:layout_width="@dimen/bind_icon_size"
            android:layout_height="@dimen/bind_icon_size"
            android:layout_marginRight="@dimen/delete_padding" />

        <ImageView
            android:id="@+id/delete"
            android:layout_width="@dimen/delete_icon_size"
            android:layout_height="@dimen/bind_icon_size"
            android:layout_marginRight="@dimen/delete_icon_size"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:paddingTop="10px"
            android:paddingBottom="10px"
            android:src="@drawable/delete" />

    </LinearLayout>

</RelativeLayout>