<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="564px"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg_middle"
    android:orientation="vertical"
    android:paddingLeft="27px"
    android:paddingTop="27px"
    android:paddingRight="27px">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/dialog_bg_title"
        android:gravity="center"
        android:id="@+id/title"
        android:text="@string/please_input_blt_name"
        android:textColor="#FFF"
        android:textSize="28px" />

    <EditText
        android:id="@+id/blt_name_et"
        android:layout_width="@dimen/dialog_edit_width"
        android:layout_height="55px"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/setting_tab_margin"
        android:layout_marginRight="@dimen/setting_tab_margin"
        android:gravity="center"
        android:layout_marginTop="30px"
        android:background="@drawable/edittext_bg"
        android:textSize="30px"
        android:singleLine="true"
        android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM,._!@#$%^*()+=:;/"
        android:textColor="@android:color/black" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48px"
        android:src="@drawable/divide_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_button_height"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_bg_button"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@drawable/text_button_color"
            android:textSize="28px" />

        <ImageView
            android:id="@+id/image_divide_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/divide_vertical" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@drawable/text_button_color"
            android:textSize="28px" />

    </LinearLayout>



</LinearLayout>