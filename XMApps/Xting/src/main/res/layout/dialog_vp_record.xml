<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    tools:ignore="PxUsage,ContentDescription">

    <LinearLayout
        android:layout_width="654px"
        android:layout_height="450px"
        android:layout_gravity="center"
        android:background="@drawable/location_detail_bg_poi"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:layout_marginTop="60px"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_wave_start"
                android:layout_width="60px"
                android:layout_height="100px"
                android:layout_gravity="center" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20px"
                android:layout_marginEnd="20px"
                android:src="@drawable/chat_send_voice_recorder_mic" />

            <ImageView
                android:id="@+id/iv_wave_end"
                android:layout_width="60px"
                android:layout_height="100px"
                android:layout_gravity="center" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_sure"
            android:layout_width="170px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60px"
            android:text="@string/sure"
            android:textColor="#8a9a9d"
            android:textSize="30px" />
    </LinearLayout>
</FrameLayout>