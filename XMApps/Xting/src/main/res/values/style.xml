<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="XMChildTabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/size_child_title</item>
    </style>

    <style name="SimilarTableTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">34px</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:shadowColor">#3358a4</item>
        <item name="android:shadowDy">0.5</item>
        <item name="android:shadowDx">0.5</item>
        <item name="android:textColor">@color/color_main_selector</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="common_button">
        <item name="android:layout_width">@dimen/width_local_fm_manual_add_to_collect</item>
        <item name="android:layout_height">@dimen/height_local_fm_manual_add_to_collect</item>
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:textSize">@dimen/font_state_view_text_size</item>
    </style>

    <style name="manual_add_light_blue">
        <item name="android:shadowRadius">20</item>
        <item name="android:shadowColor">@color/color_shadow_checked</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="manual_add_disable">
        <item name="android:shadowRadius">0</item>
        <item name="android:shadowColor">@color/color_home_menus_unchecked</item>
        <item name="android:textColor">@color/color_home_menus_unchecked</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowDx">0</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="manual_switch_light_blue">
        <item name="android:shadowRadius">20</item>
        <item name="android:shadowColor">@color/color_shadow_checked</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:textColor">@color/selector_text_check</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="manual_switch_normal_gray">
        <item name="android:shadowRadius">0</item>
        <item name="android:shadowColor">@color/color_home_menus_unchecked</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowDx">0</item>
        <item name="android:textColor">@color/selector_text_check</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="popup_window_anim_style">
        <item name="android:windowEnterAnimation">@anim/pop_window_left_in</item>
        <item name="android:windowExitAnimation">@anim/pop_window_left_out</item>
    </style>

    <style name="TranslucentTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="vp_record_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否漂现在activity上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 是否半透明 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 去除黑色边框的关键设置项 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 屏幕背景是否变暗 -->
        <item name="android:backgroundDimAmount">0.3</item>
    </style>
</resources>