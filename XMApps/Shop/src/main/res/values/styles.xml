<resources>

    <style name="horizontal_progress" parent="Widget.AppCompat.ProgressBar.Horizontal">

        <item name="android:indeterminateOnly">false</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:maxHeight">40dp</item>

    </style>

    <style name="Sub_Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48px</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_txt_select_white_yellow</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">28px</item>
        <item name="android:padding">@dimen/size_add_to_click_padding</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/font_of_shop_32</item>
    </style>

    <style name="text_using">
        <item name="android:textColor">@color/color_using</item>
    </style>

    <style name="text_nousing">
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="custom_alert_dialog" parent="Base.AlertDialog.AppCompat">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
