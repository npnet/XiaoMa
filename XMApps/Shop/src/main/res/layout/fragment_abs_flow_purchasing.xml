<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="@dimen/height_rv"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="@dimen/width_rv_margin_left"
            android:layout_marginRight="@dimen/width_rv_margin_right"
            android:layout_marginTop="@dimen/height_rv_margin_top"
            android:overScrollMode="never"/>

    <TextView
            android:id="@+id/tv_buy"
            android:layout_width="@dimen/width_tv_buy"
            android:layout_height="@dimen/height_tv_buy"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recyclerView"
            android:layout_marginTop="@dimen/height_tv_buy_margin_top"
            android:background="@drawable/icon_buy"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/height_tv_buy_pad_top"
            android:text="@string/state_buy"
            android:textColor="@color/white"
            android:textSize="@dimen/font_of_shop_32"/>
</android.support.constraint.ConstraintLayout>