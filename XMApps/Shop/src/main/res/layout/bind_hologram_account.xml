<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bind_hologram_account_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_bg_step_one"
        android:layout_width="@dimen/size_bind_step_image"
        android:layout_height="@dimen/size_bind_step_image"
        android:background="@drawable/point_hologram_step"
        android:gravity="center"
        android:text="1"
        android:textSize="@dimen/font_of_shop_30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_step_one_load_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_bind_hologram_text_margin"
        android:text="@string/bind_hologram_step_one"
        android:textSize="@dimen/font_of_shop_30"
        app:layout_constraintBottom_toBottomOf="@id/tv_bg_step_one"
        app:layout_constraintStart_toEndOf="@id/tv_bg_step_one"
        app:layout_constraintTop_toTopOf="@id/tv_bg_step_one" />


    <View
        android:id="@+id/divider_line_step_one"
        android:layout_width="@dimen/width_step_line"
        android:layout_height="@dimen/height_step_line"
        android:layout_marginStart="@dimen/size_bind_hologram_line_margin"
        android:background="@drawable/line_hologram_bind"
        app:layout_constraintBottom_toBottomOf="@id/tv_bg_step_one"
        app:layout_constraintStart_toEndOf="@id/tv_step_one_load_app"
        app:layout_constraintTop_toTopOf="@id/tv_bg_step_one" />


    <TextView
        android:id="@+id/tv_bg_step_two"
        android:layout_width="@dimen/size_bind_step_image"
        android:layout_height="@dimen/size_bind_step_image"
        android:layout_marginStart="@dimen/size_bind_hologram_line_margin"
        android:background="@drawable/point_hologram_step"
        android:gravity="center"
        android:text="2"
        android:textSize="@dimen/font_of_shop_30"
        app:layout_constraintStart_toEndOf="@id/divider_line_step_one"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_step_tow_scan_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_bind_hologram_text_margin"
        android:text="@string/bind_hologram_step_two"
        android:textSize="@dimen/font_of_shop_30"
        app:layout_constraintBottom_toBottomOf="@id/tv_bg_step_two"
        app:layout_constraintStart_toEndOf="@id/tv_bg_step_two"
        app:layout_constraintTop_toTopOf="@id/tv_bg_step_two" />


    <View
        android:id="@+id/divider_line_step_two"
        android:layout_width="@dimen/width_step_line"
        android:layout_height="@dimen/height_step_line"
        android:layout_marginStart="@dimen/size_bind_hologram_line_margin"
        android:background="@drawable/line_hologram_bind"
        app:layout_constraintBottom_toBottomOf="@id/tv_bg_step_two"
        app:layout_constraintStart_toEndOf="@id/tv_step_tow_scan_code"
        app:layout_constraintTop_toTopOf="@id/tv_bg_step_two" />


    <TextView
        android:id="@+id/tv_bg_step_three"
        android:layout_width="@dimen/size_bind_step_image"
        android:layout_height="@dimen/size_bind_step_image"
        android:layout_marginStart="@dimen/size_bind_hologram_line_margin"
        android:background="@drawable/point_hologram_step"
        android:gravity="center"
        android:text="3"
        android:textSize="@dimen/font_of_shop_30"
        app:layout_constraintStart_toEndOf="@id/divider_line_step_two"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_step_three_bind_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_bind_hologram_text_margin"
        android:text="@string/bind_hologram_step_three"
        android:textSize="@dimen/font_of_shop_30"
        app:layout_constraintBottom_toBottomOf="@id/tv_bg_step_three"
        app:layout_constraintStart_toEndOf="@id/tv_bg_step_three"
        app:layout_constraintTop_toTopOf="@id/tv_bg_step_three" />


    <ImageView
        android:id="@+id/iv_load_app_qr_code"
        android:layout_width="@dimen/size_bind_hologram_qr_code"
        android:layout_height="@dimen/size_bind_hologram_qr_code"
        android:layout_marginTop="@dimen/size_bind_hologram_qr_code_margin_top"
        android:background="@drawable/bind_hologram_bg_code"
        app:layout_constraintEnd_toEndOf="@id/tv_step_one_load_app"
        app:layout_constraintStart_toStartOf="@id/tv_bg_step_one"
        app:layout_constraintTop_toBottomOf="@id/tv_step_one_load_app" />


    <TextView
        android:id="@+id/tv_step_one_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:text="@string/load_install_after"
        android:textSize="@dimen/font_of_shop_24"
        app:layout_constraintEnd_toEndOf="@id/tv_step_one_load_app"
        app:layout_constraintStart_toStartOf="@id/tv_bg_step_one"
        app:layout_constraintTop_toBottomOf="@id/iv_load_app_qr_code" />


    <ImageView
        android:id="@+id/iv_phone_app_qr_code"
        android:layout_width="@dimen/size_bind_hologram_qr_code"
        android:layout_height="@dimen/size_bind_hologram_qr_code"
        android:background="@drawable/bind_hologram_bg_code"
        app:layout_constraintEnd_toEndOf="@id/tv_step_tow_scan_code"
        app:layout_constraintStart_toStartOf="@id/tv_bg_step_two"
        app:layout_constraintTop_toTopOf="@id/iv_load_app_qr_code" />

    <TextView
        android:id="@+id/tv_step_two_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:text="@string/scan_qr_code_bind_hologram"
        android:textSize="@dimen/font_of_shop_24"
        app:layout_constraintEnd_toEndOf="@id/tv_step_tow_scan_code"
        app:layout_constraintStart_toStartOf="@id/tv_bg_step_two"
        app:layout_constraintTop_toBottomOf="@id/iv_phone_app_qr_code" />


    <TextView
        android:id="@+id/tv_step_three_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineSpacingMultiplier="1.3"
        android:text="@string/in_phone_click_confirm_bind"
        android:textSize="@dimen/font_of_shop_26"
        app:layout_constraintBottom_toBottomOf="@id/iv_phone_app_qr_code"
        app:layout_constraintEnd_toEndOf="@id/tv_step_three_bind_finish"
        app:layout_constraintStart_toStartOf="@id/tv_bg_step_three"
        app:layout_constraintTop_toTopOf="@id/iv_phone_app_qr_code" />
</android.support.constraint.ConstraintLayout>