<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/width_home_menus"
    android:layout_height="@dimen/height_home_menus"
    tools:parentTag="android.widget.FrameLayout">

    <TextView
        android:id="@+id/tab_menu_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_home_menu_text"
        android:gravity="center"
        android:text="@string/theme"
        android:textColor="@color/selector_home_menus_text"
        android:textSize="@dimen/font_home_tab" />

    <ImageView
        android:id="@+id/tab_menu_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:background="@drawable/bg_item_select" />

</merge>