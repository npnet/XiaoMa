<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_pay_operation_button_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_dialog_bottom_button"
    android:paddingBottom="@dimen/size_dialog_button_margin_bottom">


    <TextView
        android:id="@+id/confirm_bt"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/dialog_button_select"
        android:gravity="center"
        android:text="@string/pay_confirm"
        android:textSize="@dimen/font_of_shop_28"
        app:layout_constraintEnd_toStartOf="@id/cancel_bt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/cancel_bt"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/dialog_button_select"
        android:gravity="center"
        android:text="@string/pay_cancel"
        android:textSize="@dimen/font_of_shop_28"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/confirm_bt"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/divider_line_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/divide_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>