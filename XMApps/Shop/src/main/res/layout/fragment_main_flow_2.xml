<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
            android:id="@+id/tv_available_flow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@+id/tv_all_flow"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="@dimen/width_ll_margin_left"
            android:layout_marginTop="100px"
            android:text="@string/avaliable_flow_OM"
            android:textColor="@color/white"
            android:textSize="@dimen/font_of_shop_30"/>

    <TextView
            android:id="@+id/tv_all_flow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_available_flow"
            android:layout_marginRight="40px"
            android:text="@string/total_flow_OM"
            android:textColor="@color/white"
            android:textSize="@dimen/font_of_shop_30"/>
    <TextView
            android:id="@+id/tv_coin_purchasing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_os_them_main_title_margin_left"
            android:padding="@dimen/size_add_to_click_padding"
            android:text="@string/coin_purchasing"
            android:textColor="@color/selector_home_menus_text"
            android:textSize="@dimen/font_of_shop_32"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_available_flow"/>

    <TextView
            android:id="@+id/tv_cash_purchasing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60px"
            android:padding="@dimen/size_add_to_click_padding"
            android:visibility="visible"
            android:text="@string/cash_purchasing"
            android:textColor="@color/selector_home_menus_text"
            android:textSize="@dimen/font_of_shop_32"
            app:layout_constraintStart_toEndOf="@+id/tv_coin_purchasing"
            app:layout_constraintTop_toTopOf="@+id/tv_coin_purchasing"/>

    <FrameLayout
            android:id="@+id/fl_contain"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_coin_purchasing"/>

</android.support.constraint.ConstraintLayout>