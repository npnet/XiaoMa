<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_hologram_skill_name"
        android:layout_width="@dimen/width_hologram_skill_button"
        android:layout_height="@dimen/height_hologram_skill_button"
        android:background="@drawable/selector_state_select_skill"
        android:gravity="center"
        android:maxEms="3"
        android:singleLine="true"
        android:text="技能名称"
        android:textSize="@dimen/font_of_shop_30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_hologram_skill_desc"
        android:layout_width="@dimen/size_hologram_skill_desc"
        android:layout_height="0dp"
        android:layout_marginStart="48px"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lineSpacingMultiplier="1.3"
        android:maxLines="2"
        android:text="技能描述技能描述技能描述技能描述技能描述技能描述技能描述技能描述技能描述技能描述技能描述技能描述"
        android:textSize="@dimen/font_of_shop_22"
        app:layout_constraintBottom_toBottomOf="@id/tv_hologram_skill_name"
        app:layout_constraintStart_toEndOf="@id/tv_hologram_skill_name"
        app:layout_constraintTop_toTopOf="@id/tv_hologram_skill_name" />

</android.support.constraint.ConstraintLayout>