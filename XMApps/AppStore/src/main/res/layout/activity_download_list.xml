<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_download_list_title_padding_left"
        android:paddingTop="@dimen/activity_download_list_title_padding_top"
        android:text="@string/download_list_page_tile"
        android:textColor="@color/color_white"
        android:textSize="@dimen/activity_download_list_title_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rc_download"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.xiaoma.ui.view.XmScrollBar
            android:id="@+id/xmScrollBar"
            android:layout_width="@dimen/width_vertical_scrollbar"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/activity_download_scroll_bar_margin"
            android:layout_marginRight="@dimen/activity_download_scroll_bar_margin"
            android:layout_marginBottom="@dimen/activity_download_scroll_bar_margin"
            app:xmdirection="vertical" />
    </LinearLayout>

</LinearLayout>