<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="@dimen/activity_main_tab_width"
        android:layout_height="match_parent"
        android:background="@drawable/bg_main_left_tab"
        android:gravity="center"
        android:paddingTop="@dimen/activity_main_tab_padding_top">

        <TextView
            android:id="@+id/app_market"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_main_tab_market_height"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/activity_main_tab_market_margin_bottom"
            android:gravity="center_horizontal"
            android:text="@string/app_mark"
            android:textColor="@color/selector_home_menus_text"
            android:textSize="@dimen/activity_main_tab_market_text_size" />

        <TextView
            android:id="@+id/app_manager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_main_tab_manager_height"
            android:layout_below="@id/app_market"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="@string/app_manager"
            android:textColor="@color/selector_home_menus_text"
            android:textSize="@dimen/activity_main_tab_manager_text_size" />

        <TextView
            android:id="@+id/tv_wait_update_count"
            android:layout_width="@dimen/activity_main_tab_wait_update_count_width"
            android:layout_height="@dimen/activity_main_tab_wait_update_count_height"
            android:layout_below="@id/app_market"
            android:layout_marginLeft="@dimen/activity_main_tab_wait_update_count_margin_left"
            android:background="@drawable/red_dot"
            android:gravity="center"
            android:visibility="gone" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>