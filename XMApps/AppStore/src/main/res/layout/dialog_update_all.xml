<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dialog_update_all_width"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg_middle"
    android:paddingTop="@dimen/dialog_update_all_padding_top"
    android:paddingBottom="@dimen/dialog_update_all_padding_bottom">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/dialog_update_all_title_padding_bottom"
        android:text="@string/tips"
        android:textColor="@color/color_white"
        android:textSize="@dimen/dialog_update_all_title_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_all_update_size"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/dialog_update_all_content_padding_bottom"
        android:text="@string/tips_content"
        android:textColor="@color/color_white"
        android:textSize="@dimen/dialog_update_all_content_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_all_update_size">

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/sure"
            android:textColor="@color/selector_dialog_sure_cancel"
            android:textSize="@dimen/dialog_update_all_sure_text_size" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/selector_dialog_sure_cancel"
            android:textSize="@dimen/dialog_update_all_cancel_text_size" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>