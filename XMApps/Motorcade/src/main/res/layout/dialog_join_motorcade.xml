<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/width_dialog_motorcade"
    android:layout_height="@dimen/height_dialog_motorcade"
    android:background="@drawable/dialog_bg_middle"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_top_dialog_title"
        android:gravity="center"
        android:text="@string/join_motorcade"
        android:textColor="@color/white"
        android:textSize="@dimen/font_text_middle" />

    <EditText
        android:id="@+id/edit_motorcade_id"
        android:layout_width="@dimen/width_dialog_center"
        android:layout_height="@dimen/height_dialog_center"
        android:layout_marginTop="@dimen/margin_top_dialog_center"
        android:background="@drawable/edit_text_bg"
        android:digits="@string/command_digits"
        android:gravity="left|center_vertical"
        android:hint="@string/dialog_et_hint"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:paddingLeft="@dimen/padding_left_et"
        android:textColor="@color/et_text_color"
        android:textColorHint="@color/et_text_color_hint"
        android:textSize="@dimen/font_search_text_big" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_bp_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color_transparent"
            android:gravity="center"
            android:paddingLeft="@dimen/padding_dialog_button"
            android:paddingRight="@dimen/padding_dialog_button"
            android:paddingTop="35px"
            android:text="@string/sure"
            android:textColor="@color/dialog_btn_selector"
            android:textSize="@dimen/font_text_middle" />

        <View
            android:layout_width="@dimen/width_button_divider"
            android:layout_height="@dimen/width_button_divider" />

        <TextView
            android:id="@+id/dialog_bp_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color_transparent"
            android:gravity="center"
            android:paddingLeft="@dimen/padding_dialog_button"
            android:paddingRight="@dimen/padding_dialog_button"
            android:paddingTop="35px"
            android:text="@string/cancel"
            android:textColor="@color/dialog_btn_selector"
            android:textSize="@dimen/font_text_middle" />
    </LinearLayout>

</LinearLayout>

