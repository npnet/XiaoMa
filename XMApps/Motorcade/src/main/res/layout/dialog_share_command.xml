<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/width_share_dialog"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg_middle"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <TextView
        android:id="@+id/dialog_share_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg_title"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_top_dialog_title"
        android:gravity="center"
        android:text="@string/share_to"
        android:textColor="@color/white"
        android:textSize="@dimen/font_share_dialog" />

    <ImageView
        android:id="@+id/dialog_share_iv"
        android:layout_width="@dimen/width_share_iv"
        android:layout_height="@dimen/height_share_iv"
        android:layout_marginTop="@dimen/margin_top_share_iv"
        android:background="@drawable/icon_club" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_share_dialog"
        android:text="@string/str_chexin" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48px"
        android:src="@drawable/divide_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_button_height"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/dialog_share_btn_sure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_bg_button"
            android:gravity="center"
            android:text="@string/sure"
            android:textColor="@drawable/text_button_color"
            android:textSize="28px" />

        <ImageView
            android:id="@+id/image_divide_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/divide_vertical" />

        <TextView
            android:id="@+id/dialog_share_btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@drawable/text_button_color"
            android:textSize="28px" />

    </LinearLayout>

</LinearLayout>

