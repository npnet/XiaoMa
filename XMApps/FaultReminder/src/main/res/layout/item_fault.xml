<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80px">

    <ImageView
        android:id="@+id/iv_fault"
        android:layout_width="40px"
        android:layout_height="40px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="120px"
        tools:src="@drawable/icon_alert_engine" />

    <TextView
        android:id="@+id/tv_fault"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20px"
        android:layout_toRightOf="@+id/iv_fault"
        android:textSize="30px"
        android:singleLine="true"
        tools:text="发动机车载诊断/发动机故障报警" />

    <ImageView
        android:id="@+id/iv_select_line"
        android:src="@drawable/item_select_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>