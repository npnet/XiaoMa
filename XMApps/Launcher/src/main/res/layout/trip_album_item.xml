<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="370px"
        android:layout_height="216px">

        <ImageView
            android:id="@+id/photo_img"
            android:layout_width="352px"
            android:layout_height="198px"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY"
            android:src="@drawable/big_frame" />

        <ImageView
            android:id="@+id/edit_img"
            android:layout_width="50px"
            android:layout_height="50px"
            android:layout_alignParentEnd="true"
            android:padding="6px"
            android:src="@drawable/mark_clean"
            android:visibility="invisible" />
    </RelativeLayout>

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30px"
        android:text="广东 深圳"
        android:textSize="26px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14px"
        android:text="2018.12.1"
        android:textSize="22px"
        android:textColor="@color/color_8a919d"
        app:layout_constraintEnd_toEndOf="@+id/years"
        app:layout_constraintStart_toStartOf="@+id/years"
        app:layout_constraintTop_toBottomOf="@+id/years" />
</LinearLayout>