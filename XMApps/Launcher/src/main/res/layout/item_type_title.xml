<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_view"
    android:layout_width="@dimen/card_normal_width"
    android:layout_height="@dimen/card_normal_height"
    android:layout_marginStart="43px"
    android:layout_marginTop="@dimen/card_normal_margin_top"
    android:gravity="center"
    android:orientation="vertical"
    tools:ignore="PxUsage">

    <com.xiaoma.ui.view.ReflectionImageView
        android:id="@+id/audio_iv"
        android:layout_width="@dimen/card_normal_width"
        android:layout_height="@dimen/card_normal_height"
        android:scaleType="fitXY"
        app:reflectionHeight="40px"
        app:reflectionPadding="6px" />

    <TextView
        android:id="@+id/audio_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="166px"
        android:paddingLeft="24px"
        android:textColor="@color/white"
        android:textSize="30px" />

    <TextView
        android:id="@+id/audio_tv_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40px"
        android:paddingLeft="24px"
        android:paddingBottom="43px"
        android:textColor="#999999"
        android:textSize="26px" />
</RelativeLayout>