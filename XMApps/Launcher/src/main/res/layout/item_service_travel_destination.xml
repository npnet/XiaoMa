<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/item_fragment_service_height"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#222233"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="@dimen/item_fragment_service_ll_title_width"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/item_fragment_service_ll_title_padding_left">

        <TextView
            android:id="@+id/tv_item_service_destination_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_fragment_service_tv_name_margin_top"
            android:textColor="@color/white"
            tools:text="欢乐海岸"
            android:textSize="@dimen/item_fragment_service_tv_name_text_size" />

        <TextView
            android:id="@+id/tv_item_service_destination_weather"
            android:layout_width="wrap_content"
            android:layout_height="50px"
            android:layout_marginTop="@dimen/item_fragment_service_tv_message_margin_top"
            android:lineSpacingExtra="@dimen/item_fragment_service_tv_message_line_spacing_extra"
            android:textColor="@color/white_60"
            android:drawableLeft="@drawable/icon_cloudy"
            android:gravity="center_vertical"
            android:drawablePadding="30px"
            android:text="多云       15℃"
            android:textSize="@dimen/item_fragment_service_tv_message_text_size" />

        <TextView
            android:id="@+id/tv_item_service_destination_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_fragment_service_tv_message_margin_top"
            android:lineSpacingExtra="@dimen/item_fragment_service_tv_message_line_spacing_extra"
            android:textColor="@color/white_60"
            tools:text="预计到达时间：16:18"
            android:textSize="@dimen/item_fragment_service_tv_message_text_size" />

        <TextView
            android:id="@+id/tv_item_service_destination_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_fragment_service_tv_message_margin_top"
            android:lineSpacingExtra="@dimen/item_fragment_service_tv_message_line_spacing_extra"
            android:textColor="@color/white_60"
            tools:text="目的地距离：16.4KM"
            android:textSize="@dimen/item_fragment_service_tv_message_text_size" />

        <TextView
            android:id="@+id/tv_item_service_destination_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_fragment_service_tv_message_margin_top"
            android:lineSpacingExtra="@dimen/item_fragment_service_tv_message_line_spacing_extra"
            android:textColor="@color/white_60"
            android:text="变更目的地"
            android:textSize="@dimen/item_fragment_service_tv_message_text_size" />




    </LinearLayout>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/ll_item_service_one"
        android:layout_width="@dimen/item_fragment_service_ll_content_width"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_item_service_destination_navi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="前往导航"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_item_service_destination_nearby"
            android:drawableTop="@drawable/icon_exclamation"
            android:textColor="@color/white_60"
            android:textSize="@dimen/item_fragment_service_tv_action_text_size" />


        <TextView
            android:id="@+id/tv_item_service_destination_nearby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_service_destination_navi"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="前往导航"
            android:drawableTop="@drawable/icon_exclamation"
            android:textColor="@color/white_60"
            android:textSize="@dimen/item_fragment_service_tv_action_text_size" />


    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/ll_item_service_two"
        android:layout_width="@dimen/item_fragment_service_ll_content_width"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_item_service_destination_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="前往导航"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_item_service_destination_more"
            android:drawableTop="@drawable/icon_exclamation"
            android:textColor="@color/white_60"
            android:textSize="@dimen/item_fragment_service_tv_action_text_size" />


        <TextView
            android:id="@+id/tv_item_service_destination_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_service_destination_collect"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="前往导航"
            android:drawableTop="@drawable/icon_exclamation"
            android:textColor="@color/white_60"
            android:textSize="@dimen/item_fragment_service_tv_action_text_size" />


    </android.support.constraint.ConstraintLayout>





</LinearLayout>
