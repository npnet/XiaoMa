        <!--android:singleLine="true"-->
        <!--android:text="距离深南大道还有500m"-->
        <!--android:textSize="@dimen/dimen_28" />-->

        <Button
            android:id="@+id/btn_operation"
            android:layout_width="@dimen/view_entertainment_btn_operation_width"
            android:layout_height="@dimen/view_entertainment_btn_operation_height"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle_shape"
            android:textColor="@color/color_black"
            android:textSize="@dimen/view_entertainment_btn_operation_size" />


    </RelativeLayout>

</merge>
