    android:gravity="center">

    <RelativeLayout
        android:id="@+id/rl_entertainment"
        android:layout_width="@dimen/view_entertainment_rl_width"
        android:layout_height="@dimen/view_entertainment_rl_height"
        android:layout_gravity="center">


        <ImageView
            android:id="@+id/iv_entertainment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_entertainment_iv_height"
