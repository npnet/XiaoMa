        <TextView
            android:id="@+id/tv_entertainment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_entertainment"
            android:layout_marginTop="@dimen/view_entertainment_tv_top"
            android:gravity="center"
            android:textSize="@dimen/view_entertainment_tv_size" />


