<?xml version="1.0" encoding="utf-8"?>
<com.xiaoma.launcher.common.views.MenuRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <com.xiaoma.launcher.common.views.NaviBarControlLayout
        android:id="@+id/fl_content"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_common">
    </com.xiaoma.launcher.common.views.NaviBarControlLayout>

    <View
        android:id="@+id/pull_left"
        android:layout_width="5px"
        android:layout_height="56px"
        android:layout_marginLeft="20px"
        android:layout_centerVertical="true"
        android:background="@drawable/icon_pull"/>

    <View
        android:id="@+id/pull_right"
        android:visibility="invisible"
        android:layout_width="5px"
        android:layout_height="56px"
        android:layout_marginRight="20px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/icon_pull"/>

</com.xiaoma.launcher.common.views.MenuRelativeLayout>