<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/item_fragment_service_height"
    android:background="#222233"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="@dimen/item_fragment_service_ll_title_width"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/item_fragment_service_ll_title_padding_left">

        <TextView
            android:id="@+id/tv_item_service_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_fragment_service_tv_name_margin_top"
            android:textColor="@color/white"
            android:textSize="@dimen/item_fragment_service_tv_name_text_size" />

        <TextView
            android:id="@+id/tv_item_service_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_fragment_service_tv_message_margin_top"
            android:lineSpacingExtra="@dimen/item_fragment_service_tv_message_line_spacing_extra"
            android:textColor="@color/white_60"
            android:textSize="@dimen/item_fragment_service_tv_message_text_size" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_item_service_one"
        android:layout_width="@dimen/item_fragment_service_ll_content_width"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_item_service_one"
            android:layout_width="@dimen/item_fragment_service_iv_width"
            android:layout_height="@dimen/item_fragment_service_iv_height"
            android:src="@drawable/icon_default_icon" />

        <TextView
            android:id="@+id/tv_item_service_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_fragment_service_tv_action_margin_top"
            android:text="@string/destination"
            android:textColor="@color/white_60"
            android:textSize="@dimen/item_fragment_service_tv_action_text_size" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_item_service_two"
        android:layout_width="@dimen/item_fragment_service_ll_content_width"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_item_service_two"
            android:layout_width="@dimen/item_fragment_service_iv_width"
            android:layout_height="@dimen/item_fragment_service_iv_height"
            android:src="@drawable/icon_default_icon" />

        <TextView
            android:id="@+id/tv_item_service_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_fragment_service_tv_action_margin_top"
            android:text="@string/common_ddress"
            android:textColor="@color/white_60"
            android:textSize="@dimen/item_fragment_service_tv_action_text_size" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_item_service_three"
        android:layout_width="@dimen/item_fragment_service_ll_content_width"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_item_service_three"
            android:layout_width="@dimen/item_fragment_service_iv_width"
            android:layout_height="@dimen/item_fragment_service_iv_height"
            android:src="@drawable/icon_default_icon" />

        <TextView
            android:id="@+id/tv_item_service_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_fragment_service_tv_action_margin_top"
            android:text="@string/common_ddress"
            android:textColor="@color/white_60"
            android:textSize="@dimen/item_fragment_service_tv_action_text_size" />

    </LinearLayout>


</LinearLayout>
