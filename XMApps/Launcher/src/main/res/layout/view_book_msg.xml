<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/view_book_margin"
    android:paddingRight="@dimen/view_book_margin">

    <TextView
        android:id="@+id/tv_hotel_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/view_book_line_spac"
        android:textSize="@dimen/hotel_book_msg_name_size"
        tools:text="维亚纳酒店" />

    <TextView
        android:id="@+id/tv_room_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:lineSpacingExtra="@dimen/view_book_line_spac"
        android:textSize="@dimen/hotel_book_msg_tv_room_type_size"
        tools:text="大床房" />

    <TextView
        android:id="@+id/tv_book_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:lineSpacingExtra="@dimen/view_book_line_spac"
        android:textSize="@dimen/hotel_book_msg_tv_book_date_size"
        tools:text="@string/check_in_data" />

    <TextView
        android:id="@+id/tv_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_room_type"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/hotel_book_msg_tv_call_top"
        android:lineSpacingExtra="@dimen/view_book_line_spac"
        android:textSize="@dimen/hotel_book_msg_tv_call_size"
        tools:text="13000000000" />

    <TextView
        android:id="@+id/tv_room_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_hotel_name"
        android:layout_marginTop="@dimen/hotel_book_msg_tv_room_count_top"
        android:lineSpacingExtra="@dimen/view_book_line_spac"
        android:textSize="@dimen/hotel_book_msg_tv_room_count_size"
        tools:text="@string/room_number" />

    <Button
        android:id="@+id/btn_book"
        android:layout_width="@dimen/btn_pay_width"
        android:layout_height="@dimen/btn_pay_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/hotel_book_msg_btn_book_bottom"
        android:text="@string/sure_book"
        android:textSize="@dimen/hotel_book_msg_btn_book_size" />
</RelativeLayout>