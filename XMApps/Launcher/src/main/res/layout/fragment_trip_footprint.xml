<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg_common"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent">

    <com.xiaoma.mapadapter.view.TextrueMapView
        android:id="@+id/trip_map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginRight="82px"
        android:layout_marginBottom="60px"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/scale_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1"
            android:button="@drawable/reduce_button_bg"
            android:textSize="50sp" />

        <CheckBox
            android:id="@+id/scale_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-15px"
            android:alpha="1"
            android:button="@drawable/amplify_button_bg"
            android:textSize="50sp" />
    </LinearLayout>

    <Button
        android:id="@+id/my_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="50px"
        android:layout_marginBottom="45px"
        android:background="@drawable/bg_location" />
</FrameLayout>
