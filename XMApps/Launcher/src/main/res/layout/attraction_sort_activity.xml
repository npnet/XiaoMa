<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_attraction_sort"
        android:text="@string/attraction_classification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/attraction_sort_tv_margin_left"
        android:textSize="@dimen/attraction_sort_tv_text_size"
        android:layout_marginTop="@dimen/attraction_sort_tv_margin_top"
        android:gravity="center" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/attraction_sort_rv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/attraction_sort_rv_height"
        android:paddingTop="@dimen/attraction_sort_activity_top"
        android:paddingBottom="@dimen/attraction_sort_activity_bottom"
        android:scrollbars="none" />

    <com.xiaoma.ui.view.XmScrollBar
        android:id="@+id/scroll_bar"
        android:layout_width="@dimen/width_scrollbar"
        android:layout_height="@dimen/height_scrollbar"
        android:layout_gravity="center_horizontal"
        android:visibility="invisible"/>

</LinearLayout>