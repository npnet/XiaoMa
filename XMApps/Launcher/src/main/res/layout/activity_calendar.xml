<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="horizontal">

    <ImageView
        android:id="@+id/add_schedule"
        android:layout_width="130px"
        android:layout_height="130px"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="60px"
        android:layout_marginEnd="60px"
        android:layout_marginBottom="100px"
        android:background="@drawable/add_schedule_selector" />

    <com.xiaoma.launcher.schedule.view.ScheduleCalenderView
        android:id="@+id/schedule_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50px"
        android:layout_toEndOf="@+id/add_schedule" />

    <FrameLayout
        android:id="@+id/container_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>