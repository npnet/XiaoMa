<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100px"
        android:text="@string/room_number"
        android:layout_marginTop="96px"
        android:textColor="@color/color_white"
        android:textSize="36px" />

    <GridView
        android:id="@+id/gv_room"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="100px"
        android:layout_marginTop="30px"
        android:layout_weight="1"
        android:verticalSpacing="48px"
        android:numColumns="2" />

    <Button
        android:id="@+id/btn_add_room"
        android:layout_width="@dimen/add_room_width"
        android:layout_height="@dimen/add_room_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/add_room_margin_bottom"
        android:textSize="24px"
        android:background="@drawable/bg_go_pay_selector"
        android:gravity="center_horizontal"
        android:paddingTop="12px"
        android:text="@string/add_room" />
</LinearLayout>