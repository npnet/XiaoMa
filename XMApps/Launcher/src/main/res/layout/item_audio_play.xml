<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/play_cover"
    android:layout_width="284px"
    android:layout_height="410px"
    tools:ignore="PxUsage">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="25px"
        android:singleLine="true"
        android:text="title"
        android:textColor="@color/white"
        android:textSize="30px" />

    <com.xiaoma.ui.view.ReflectionImageView
        android:id="@+id/iv_play_cover"
        android:layout_width="match_parent"
        android:layout_height="330px"
        android:layout_below="@id/tv_title"
        android:scaleType="fitXY"
        app:reflectionHeight="40px"
        app:reflectionPadding="6px" />

    <ImageView
        android:id="@+id/iv_control"
        android:layout_width="108px"
        android:layout_height="108px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170px"
        android:src="@drawable/selector_btn_play" />

    <ImageView
        android:id="@+id/fm_iv_control"
        android:layout_width="68px"
        android:layout_height="68px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="185px"
        android:src="@drawable/selector_btn_play"
        android:visibility="gone" />

</RelativeLayout>