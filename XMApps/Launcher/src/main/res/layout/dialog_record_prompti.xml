<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="wrap_content"
    android:background="@drawable/mark_dialog_bg_middle"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dialog_padding"
    android:paddingTop="@dimen/dialog_padding"
    android:paddingRight="@dimen/dialog_padding">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:id="@+id/confirm_dialog_title"
        android:text="@string/travel_tip_str"
        android:textColor="#FFF"
        android:textSize="@dimen/dialog_text_size" />

    <TextView
        android:id="@+id/confirm_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="60px"
        android:paddingRight="60px"
        android:layout_marginTop="45px"
        android:lineSpacingExtra = "10px"
        android:gravity="center_horizontal"
        android:textColor="#FFF"
        android:textSize="@dimen/dialog_text_size" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48px"
        android:src="@drawable/mark_divide_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_button_height"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_confirm_sure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/mark_button"
            android:gravity="center"
            android:text="@string/me_know"
            android:textColor="@color/dialog_btn_selector"
            android:textSize="28px" />

    </LinearLayout>

</LinearLayout>