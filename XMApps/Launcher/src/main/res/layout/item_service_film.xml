<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/item_service_film_width"
    android:layout_height="@dimen/item_service_film_height">

    <android.support.constraint.Guideline
        android:id="@+id/gl_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />

    <android.support.constraint.Guideline
        android:id="@+id/gl_middle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

    <android.support.constraint.Guideline
        android:id="@+id/gl_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6" />

    <android.support.constraint.Guideline
        android:id="@+id/gl_end"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />


    <com.xiaoma.ui.view.ReflectionImageView
        android:id="@+id/iv_item_service_film"
        android:layout_width="@dimen/fragment_service_card_width"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/gl_left"
        app:layout_constraintTop_toTopOf="parent"
        app:reflectionHeight="@dimen/fragment_service_card_reflex_height"
        app:reflectionPadding="@dimen/fragment_service_card_padding" />

    <TextView
        android:id="@+id/tv_item_service_film"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tv_item_service_film_text_margin_top"
        android:text="电影"
        android:textColor="@color/white"
        android:textSize="@dimen/tv_item_service_film_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/gl_left"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_item_service_film_ens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tv_item_service_film_text_ens_margin_top"
        android:text="MOVIE"
        android:textColor="@color/color_8a919d"
        android:textSize="@dimen/tv_item_service_film_text_ens_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/gl_left"
        app:layout_constraintTop_toTopOf="parent" />


    <com.xiaoma.ui.view.ReflectionImageView
        android:id="@+id/iv_item_service_film_one"
        android:layout_width="@dimen/fragment_service_card_width"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/gl_left"
        app:layout_constraintRight_toRightOf="@id/gl_middle"
        app:layout_constraintTop_toTopOf="parent"
        app:reflectionHeight="@dimen/fragment_service_card_reflex_height"
        app:reflectionPadding="@dimen/fragment_service_card_padding" />


    <TextView
        android:id="@+id/tv_item_service_film_one"
        android:layout_width="0dp"
        android:layout_height="@dimen/tv_item_service_film_service_text_height"
        android:layout_marginTop="@dimen/tv_item_service_film_service_text_margin_top"
        android:background="@drawable/bg_service_tv"
        android:gravity="center"
        android:text="@string/maintenance_time_not_up"
        android:textColor="@color/white"
        android:textSize="@dimen/tv_item_service_film_one_text_size"
        app:layout_constraintLeft_toLeftOf="@id/gl_left"
        app:layout_constraintRight_toRightOf="@id/gl_middle"
        app:layout_constraintTop_toTopOf="parent" />


    <com.xiaoma.ui.view.ReflectionImageView
        android:id="@+id/iv_item_service_film_two"
        android:layout_width="@dimen/fragment_service_card_width"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/gl_middle"
        app:layout_constraintRight_toRightOf="@id/gl_right"
        app:layout_constraintTop_toTopOf="parent"
        app:reflectionHeight="@dimen/fragment_service_card_reflex_height"
        app:reflectionPadding="@dimen/fragment_service_card_padding" />

    <TextView
        android:id="@+id/tv_item_service_film_two"
        android:layout_width="0dp"
        android:layout_height="@dimen/tv_item_service_film_service_text_height"
        android:layout_marginTop="@dimen/tv_item_service_film_service_text_margin_top"
        android:background="@drawable/bg_service_tv"
        android:gravity="center"
        android:text="@string/maintenance_time_not_up"
        android:textColor="@color/white"
        android:textSize="@dimen/tv_item_service_film_two_text_size"
        app:layout_constraintLeft_toLeftOf="@id/gl_middle"
        app:layout_constraintRight_toRightOf="@id/gl_right"
        app:layout_constraintTop_toTopOf="parent" />


    <com.xiaoma.ui.view.ReflectionImageView
        android:id="@+id/iv_item_service_film_three"
        android:layout_width="@dimen/fragment_service_card_width"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/gl_right"
        app:layout_constraintRight_toRightOf="@id/gl_end"
        app:layout_constraintTop_toTopOf="parent"
        app:reflectionHeight="@dimen/fragment_service_card_reflex_height"
        app:reflectionPadding="@dimen/fragment_service_card_padding" />

    <TextView
        android:id="@+id/tv_item_service_film_three"
        android:layout_width="0dp"
        android:layout_height="@dimen/tv_item_service_film_service_text_height"
        android:layout_marginTop="@dimen/tv_item_service_film_service_text_margin_top"
        android:background="@drawable/bg_service_tv"
        android:gravity="center"
        android:text="@string/maintenance_time_not_up"
        android:textColor="@color/white"
        android:textSize="@dimen/tv_item_service_film_two_text_size"
        app:layout_constraintLeft_toLeftOf="@id/gl_right"
        app:layout_constraintRight_toRightOf="@id/gl_end"
        app:layout_constraintTop_toTopOf="parent" />

    <com.xiaoma.ui.view.ReflectionImageView
        android:id="@+id/iv_item_service_film_four"
        android:layout_width="@dimen/fragment_service_card_width"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/gl_end"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:reflectionHeight="@dimen/fragment_service_card_reflex_height"
        app:reflectionPadding="@dimen/fragment_service_card_padding" />

    <TextView
        android:id="@+id/tv_item_service_film_four"
        android:layout_width="0dp"
        android:layout_height="@dimen/tv_item_service_film_service_text_height"
        android:layout_marginTop="@dimen/tv_item_service_film_service_text_margin_top"
        android:background="@drawable/bg_service_tv"
        android:gravity="center"
        android:text="@string/maintenance_time_not_up"
        android:textColor="@color/white"
        android:textSize="@dimen/tv_item_service_film_four_text_size"
        app:layout_constraintLeft_toLeftOf="@id/gl_end"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>
