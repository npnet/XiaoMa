<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/item_room_detail_relative_width"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_room_detail_iv_cover_height"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_room" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="@dimen/item_room_detail_tv_price_width"
        android:layout_height="@dimen/item_room_detail_tv_price_height"
        android:layout_alignTop="@+id/iv_cover"
        android:background="@drawable/bg_room_price"
        android:gravity="center"
        android:textColor="@color/color_black"
        android:textSize="@dimen/item_room_detail_tv_price_size"
        tools:text="¥0起" />

    <TextView
        android:id="@+id/tv_no_room"
        android:layout_width="@dimen/item_room_detail_tv_price_width"
        android:layout_height="@dimen/item_room_detail_tv_price_height"
        android:layout_alignTop="@+id/iv_cover"
        android:layout_alignParentEnd="true"
        android:background="@drawable/bg_room_wait"
        android:gravity="center"
        android:text="@string/no_room"
        android:textColor="@color/color_black"
        android:textSize="@dimen/item_room_detail_tv_price_size" />

    <TextView
        android:id="@+id/tv_detail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_room_detail_tv_detail_height"
        android:layout_alignBottom="@+id/iv_cover"
        android:background="@drawable/bg_room_info"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/item_room_detail_tv_detail_size" />

    <TextView
        android:id="@+id/tv_room_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_cover"
        android:layout_marginTop="@dimen/item_room_detail_tv_room_name_top"
        android:gravity="center"
        android:textSize="@dimen/item_room_detail_tv_room_name_size"
        tools:text="豪华单人房" />


</RelativeLayout>