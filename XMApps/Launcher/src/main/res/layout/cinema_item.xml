<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="@dimen/cinema_item_relative_width"
        android:layout_height="@dimen/cinema_item_relative_height">

        <ImageView
            android:id="@+id/cinema_img"
            android:src="@drawable/not_film_img"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:gravity="center"
            android:background="@drawable/bg_distance"
            android:id="@+id/cinema_distance"
            android:textSize="@dimen/cinema_item_distance_size"
            android:textColor="#222222"
            android:layout_width="@dimen/cinema_item_distance_width"
            android:layout_height="@dimen/cinema_item_distance_height" />

        <TextView
            android:gravity="center"
            android:background="#60000000"
            android:id="@+id/cinema_position"
            android:layout_width="match_parent"
            android:textSize="@dimen/cinema_item_position_size"
            android:layout_height="@dimen/cinema_item_position_height"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/cinema_name"
        android:textSize="@dimen/cinema_item_name_size"
        android:layout_marginTop="@dimen/cinema_item_name_top"

        android:gravity="center"
        android:singleLine="true"
        android:layout_width="@dimen/cinema_item_relative_width"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/name_and_price"
        android:textSize="@dimen/cinema_item_name_and_price_size"
        android:gravity="center"
        android:singleLine="true"
        android:layout_width="@dimen/cinema_item_relative_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/cinema_item_name_and_price_top"
        android:textColor="#8a919d"/>

</LinearLayout>